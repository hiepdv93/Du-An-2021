<div id="modamSlide" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog w700">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #5db2ff; color: white">
                <button type="button" id="close_producet" class="close" data-dismiss="modal">&times;</button>
                <h4 class="titleSlide"></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Khách hàng</label><span class="text-red">(*)</span>
                                <input type="hidden" value="" id="id" />
                                <input type="text" class="form-control" name="name" id="pName" maxlength="250" placeholder="Khách hàng.." required>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Ảnh </label>
                            <input type="text" class="form-control csinput" maxlength="250" name="images" id="pImage" placeholder="Chọn ảnh" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Thứ tự</label><span class="text-red">(*)</span>
                                <input type="number" value="1" class="form-control" placeholder="Thứ tự" id="numberOder" name="numberOder" required="required">
                            </span>
                        </div>
                    </div>

                </div>
             
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Nội dung</label>
                            <textarea type="text" rows="3" class="form-control csinput" name="contents" id="pNote" placeholder="Nhập nội dung.." />
                        </div>
                    </div>
                </div>
                <hr />
                <div class="modal-footer" style="margin-top: -20px;">
                    <button type="submit" class="btn btn-primary" onclick="CreateOrUpdate()"><i class="glyphicon glyphicon-floppy-save"></i> Lưu lại</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Thoát</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $("#pImage").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#pImage").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>
