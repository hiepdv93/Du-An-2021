@model IList<NTSPRODUCT.Models.Category>
@{
    var conf = (NTSPRODUCT.Models.Config)ViewBag.conf;
    var cateP = (NTSPRODUCT.Models.Category)ViewBag.cateP;
    var product = (List<NTSPRODUCT.Models.Product>)ViewBag.product;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isCateParen = ViewBag.cateParent;
    NTSPRODUCT.Models.Product pro;

}
<div id="vnt-content">
    @if (cateP != null)
    {
        if (isCateParen)
        {
            foreach (var item in Model)
            {
                pro = product.FirstOrDefault(u => u.cateId.Equals(item.id));
                <div class="menuBoxMid">
                    <div class="wrapper">
                        <div class="box_mid">
                            <div class="mid-title">
                                <div class="titleL">
                                    <h2>@item.cateName<p class="en-sp">@item.cateNameSub</p></h2>
                                </div>
                                <div class="titleR"></div>
                            </div>
                            <div class="mid-content">
                                <div class="mod-content row">
                                    <div id="vnt-main" class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                        <div class="the-content desc">
                                            <div class="img" style="margin-bottom: 5px;">
                                                <a href="/nhom-thuc-don/@item.cateKey" title="@item.cateName">
                                                    <img src="@item.cateImage" alt="@item.cateName" />
                                                </a>
                                            </div>
                                            @Html.Raw(item.cateDescription)
                                        </div>
                                        <div class="linkM"><a href="/nhom-thuc-don/@item.cateKey" title="@item.cateName"><span>Xem sản phẩm</span></a></div>
                                    </div>
                                    <div id="vnt-sidebar" class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                        @if (pro != null)
                                        {
                                            <div class="itemMenu">
                                                <div class="img"><a href="/thuc-don/@pro.pro_key" title="@pro.pro_name"><img src="@pro.proAvata" alt="@pro.pro_name" /></a></div>
                                                <div class="caption">
                                                    <div class="tend">
                                                        <h3><a href="/thuc-don/@pro.pro_key" title="@pro.pro_name">@pro.pro_name<p class="en-sp">@pro.pro_nameSub</p></a></h3>
                                                    </div>
                                                    <div class="des">@Html.Raw(pro.introContent)</div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="menuBoxMid">
                <div class="wrapper">
                    <div class="box_mid">
                        <div class="mid-title">
                            <div class="titleL">
                                <h2>@cateP.cateName<p class="en-sp">@cateP.cateNameSub</p></h2>
                            </div>
                            <div class="titleR"></div>
                        </div>
                        <div class="mid-content">
                            <div class="mod-content row">
                                <div id="vnt-main" class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                    <div class="the-content desc">
                                        <div class="img" style="margin-bottom: 5px;">
                                            <a href="/nhom-thuc-don/@cateP.cateKey" title="@cateP.cateName">
                                                <img src="@cateP.cateImage" alt="@cateP.cateName" />
                                            </a>
                                        </div>
                                        @Html.Raw(cateP.cateDescription)
                                    </div>
                                    <div class="linkM"><a href="/nhom-thuc-don/@cateP.cateKey" title="@cateP.cateName"><span>Xem sản phẩm</span></a></div>
                                </div>
                                <div id="vnt-sidebar" class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                    @if (product.Count > 0)
                                    {
                                        <div class="itemMenu">
                                            <div class="img"><a href="/thuc-don/@product[0].pro_key" title="@product[0].pro_name"><img src="@product[0].proAvata" alt="@product[0].pro_name" /></a></div>
                                            <div class="caption">
                                                <div class="tend">
                                                    <h3><a href="/thuc-don/@product[0].pro_key" title="@product[0].pro_name">@product[0].pro_name<p class="en-sp">@product[0].pro_nameSub</p></a></h3>
                                                </div>
                                                <div class="des">@Html.Raw(product[0].introContent)</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="menuOTher">
                <div class="wrapper">
                    <div class="box_mid">
                        <div class="mid-title">
                            <div class="titleL">
                                <h2>DANH SÁCH THỰC ĐƠN</h2>
                            </div>
                            <div class="titleR"></div>
                        </div>
                        <div class="mid-content">
                            <div id="slideOther" class="slideOther slick-init">
                                @foreach (var item in product)
                                {
                                    <div class="item">
                                        <div class="product">
                                            <div class="img"><a href="/thuc-don/@item.pro_key" title="@item.pro_name"><img src="@item.proAvata" alt="@item.pro_name" /></a></div>
                                            <div class="tend">
                                                <h3>
                                                    <a href="/thuc-don/@item.pro_key" title="@item.pro_name">
                                                        @item.pro_name
                                                    <p class="en-sp">@item.pro_nameSub</p>
                                                </a>
                                            </h3>
                                        </div>
                                        <div class="des">@item.introContent</div>
                                    </div>
                                </div>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
</div>
