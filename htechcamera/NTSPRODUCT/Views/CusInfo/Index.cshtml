    <script src="~/Content/AdminJSController/script_validate.js"></script>

</head>
<body>
    <div id="loader_id"></div>
    <div id="overlay" onclick="off()"></div>
    <div class="wrapper">
        <header class="main-header">
            <a href="/Home/Index" class="logo">
                <span class="logo-mini"><b>A</b>LT</span>
                <span class="logo-lg"><b>Admin</b>LTE</span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">

                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Admin
                </h1>

            </section>
            <section class="content">
                <!-- SELECT2 EXAMPLE -->
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin tìm kiếm</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" id="nameSearch" class="form-control" placeholder="Tên khách hàng.." />
                            </div>
                            <div class="col-md-3">
                                <input type="text" id="phoneSearch" class="form-control" placeholder="Email.." />
                            </div>
                            <div class="col-md-6 text-right">
                                <button type="button" class="btn  btn-success" onclick="SearchCus()"><i class="fa fa-fw fa-search"></i> Tìm kiếm</button>
                                <button class="btn btn-default" type="button" onclick="window.location='/CusInfo/index'"><i class="fa fa-fw fa-refresh"></i> Làm mới</button>
                            </div>

                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Danh sách ý kiến</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="dataTables_wrapper form-inline dt-bootstrap">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h4>
                                                Tổng số <b class="badge badge-primary" id="count_data">@Model.Count</b> bản ghi
                                            </h4>
                                        </div><div class="col-sm-6 text-right">
                                        </div>
                                    </div>
                                    <div class="row" id="row_data">
                                        <div class="col-sm-12">
                                            <table class="table table-bordered table-hover" style="min-width:1000px">
                                                <thead>
                                                    <tr>
                                                        <th width="50px" class="text-center">STT</th>
                                                        <th width="200px">Tên khách hàng</th>
                                                        <th width="150px">Số điện thoại</th>
                                                        <th>Exten</th>
                                                        <th width="150px">Ngày gửi</th>
                                                        <th width="110px" class="text-center">Trạng thái</th>
                                                        <th width="110px" class="text-center">Xóa</th>

                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (var item in Model)
                                                    {
                                                        index++;
                                                        <tr>
                                                            <td class="text-center">@index</td>
                                                            <td>@item.name</td>
                                                            <td>@item.phone</td>
                                                            <td>@item.ex</td>
                                                            <td>@item.createDate.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                                            <td class="text-center">
                                                                <label class="switch">
                                                                    <input type="checkbox" onchange="ChangeStatus('@item.id')" @(item.active == Constants.Checked ? "checked" : "")>
                                                                    <span class="slider round"></span>
                                                                </label>
                                                            </td>
                                                            <td class="text-center">
                                                                <a href="/cusinfo/delete/@item.id" onclick="return confirm('Are you sure you want to delete this item?');">
                                                                    <span class="fa fa-trash-o font18"></span>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }

                                                </tbody>

                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                </div>

            </section>
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.3.8
            </div>
            <strong>Copyright &copy; 2019 <a href="http://nhantinsoft.vn/" target="_blank" title="Công ty Cổ phần Công nghệ Nhân Tín">NTS</a>.</strong> All rights
            reserved.
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="control-sidebar-home-tab">
                </div>
                <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
            </div>
        </aside>
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <div id="div_user"></div>

    <!-- Select2 -->
    <script src="~/Content/CssAdmin/plugins/select2/select2.full.min.js"></script>
    <!-- InputMask -->
    <script src="~/Content/CssAdmin/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="~/Content/CssAdmin/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="~/Content/CssAdmin/plugins/input-mask/jquery.inputmask.extensions.js"></script>
    <!-- date-range-picker -->
    @*<script src="~/Content/CssAdmin/plugins/daterangepicker/daterangepicker.js"></script>*@
    <!-- bootstrap datepicker -->
    @*<script src="~/Content/CssAdmin/plugins/datepicker/bootstrap-datepicker.js"></script>*@
    <!-- bootstrap color picker -->
    <script src="~/Content/CssAdmin/plugins/colorpicker/bootstrap-colorpicker.min.js"></script>
    <!-- bootstrap time picker -->
    <script src="~/Content/CssAdmin/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <!-- SlimScroll 1.3.0 -->
    <script src="~/Content/CssAdmin/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- iCheck 1.0.1 -->
    <script src="~/Content/CssAdmin/plugins/iCheck/icheck.min.js"></script>
    <!-- FastClick -->
    <script src="~/Content/CssAdmin/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/CssAdmin/dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/CssAdmin/dist/js/demo.js"></script>
    <!-- Page script -->


    <script>
        $("#nameSearch").keydown(function (event) {
            if (event.keyCode === 13) {
                SearchCus();
            }
        });
        $("#phoneSearch").keydown(function (event) {
            if (event.keyCode === 13) {
                SearchCus();
            }
        });
        function SearchCus() {
            var nameSearch = $('#nameSearch').val();
            var phoneSearch = $('#phoneSearch').val();
            window.location = '/CusInfo/index?phone=' + phoneSearch + '&name=' + nameSearch;
        }
        function ChangeStatus(id) {
            $.ajax({
                url: "/CusInfo/ChangeStatus?id=" + id,
                type: "POST",
                success: function (data) {
                    if (data.ok === true) {
                        toastr.success('Cập nhật trạng thái thành công', { timeOut: 5000 });
                    } else {
                        toastr.error(data.mess, { timeOut: 5000 });
                    }
                },
                error: function (response) {
                    toastr.error("Đã xảy ra lỗi!", { timeOut: 5000 });
                },
            });
        }

