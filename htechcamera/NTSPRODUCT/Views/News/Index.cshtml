
@{
    ViewBag.Title = "Administrator - Danh sách tin tức";
    ViewBag.controller = "Quản lý tin tức";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string cateId = Request["cateId"];
}

<!-- SELECT2 EXAMPLE -->
<div class="box ">
    <div class="box-header with-border">
        <h3 class="box-title">Thông tin tìm kiếm</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-3">
                <select name="cateSearch" id="cateSearch" class="form-control">
                    <option value="">Tất cả danh mục </option>
                    @Html.Action("GetCateSearch", "ImportView", new { type = ClassExten.typeNew })
                </select>
                @if (!string.IsNullOrEmpty(cateId))
                {
                    <script>
                    $('#cateSearch').val('@cateId');
                    </script>
                }
            </div>
            <div class="col-md-3">
                <input type="text" id="nameSearch" class="form-control" placeholder="Tiêu đề tin.." />
            </div>
            <div class="col-md-6 text-right">
                <button type="button" class="btn  btn-success margin-r-5" onclick="SearchNews()"><i class="fa fa-fw fa-search"></i> Tìm kiếm</button>
                <button class="btn btn-default" type="button" onclick="RefreshNews()"><i class="fa fa-fw fa-refresh"></i> Làm mới</button>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<div class="row">
    <div class="col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Danh sách tin tức</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>
                                Tổng số <b class="badge badge-primary" id="count_data">0</b> bản ghi
                            </h4>
                        </div><div class="col-sm-6 text-right">
                            <a class="btn btn-info" href="/News/Add"><i class="fa fa-fw fa-plus"></i>Thêm mới</a>
                        </div>
                    </div>
                    <div class="row" id="row_data">

                    </div>

                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
<!-- /.row -->
@if (Session["ok"] != null)
{
    <script type="text/javascript">
        toastr.success('@Session["ok"].ToString()');
    </script>
}
@if (Session["ok"] != null) { Session["ok"] = null; }
<script src="~/Content/AdminJSController/NewsListControllers.js"></script>
