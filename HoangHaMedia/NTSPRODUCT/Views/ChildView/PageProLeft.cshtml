@model IList<NTSPRODUCT.Models.Support>
@{
    var sologan = (List<NTSPRODUCT.Models.WhyChooseUss>)ViewBag.sologan;
    var pro = (List<NTSPRODUCT.Models.Product>)ViewBag.pro;
    string typePage = ViewBag.typePage;
}

<div class="col-md-3 col-xs-12 col-lg-3" id="left-panel">
    <div class="aside_camket hidden-xs">
        <div class="title_module">
            <h2><span>Cam kết khách hàng</span></h2>
        </div>
        <div class="categories-box">
            <ul class="list-cam-ket">
                @foreach (var item in sologan)
                {
                    <li><i class="fa fa-hand-o-right">&nbsp;</i>@item.title</li>
                }
            </ul>
        </div>
    </div>
    <div class="aside_catalog">
        <div class="title_module">
            <h2><span>Dịch vụ</span></h2>
        </div>
        <div class="categories-box">
            <ul class="nav navbar-pills">
                <li class="nav-item ">
                    <a class="nav-link" href="/hoi-truong">Hội trường</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/su-kien">Sự kiện</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="aside_content_news">
        <div class="title_module">
            <h2><span>Sự kiện nổi bật</span></h2>
        </div>
        <div class="categories-box">
            <div class="list-blogs">
                @if (typePage.Equals(ClassExten.SuKien))
                {
                    foreach (var item in pro)
                    {
                        <article class="blog-item blog-item-list clearfix">
                            <a href="/su-kien/@item.pro_key" title="@item.pro_name" class="panel-box-media">
                                <img src="@item.proAvata" width="70" alt="@item.pro_name">
                            </a>
                            <div class="blogs-rights">
                                <h3 class="blog-item-name">
                                    <a href="/su-kien/@item.pro_key" title="@item.pro_name">
                                        @item.pro_name
                                    </a>
                                </h3>
                                <div class="wrap_price_item">
                                    <a href="/su-kien/@item.pro_key" title="@item.pro_name" class="views_details">
                                        Xem chi tiết  <i class="fa fa-angle-double-right"
                                                         aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </article>
                    }
                }
                else
                {
                    foreach (var item in pro)
                    {
                        <article class="blog-item blog-item-list clearfix">
                            <a href="/hoi-truong/@item.pro_key" title="@item.pro_name" class="panel-box-media">
                                <img src="@item.proAvata" width="70" alt="@item.pro_name">
                            </a>
                            <div class="blogs-rights">
                                <h3 class="blog-item-name">
                                    <a href="/hoi-truong/@item.pro_key" title="@item.pro_name">
                                        @item.pro_name
                                    </a>
                                </h3>
                                <div class="wrap_price_item">
                                    <a href="/hoi-truong/@item.pro_key" title="@item.pro_name" class="views_details">
                                        Xem chi tiết<i class="fa fa-angle-double-right"
                                                       aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </article>
                    }
                }


            </div>
        </div>
    </div>

    <div class="aside_support support_online">
        <div class="title_module">
            <h2><span>@ClassExten.GetLangKey("key_httt")</span></h2>
        </div>
        <div class="support_content">
            <div class="list_support">
                <ul>
                    @foreach (var item in Model)
                    {
                        if (item.sType == 1)
                        {
                            <li><a href="skype:@item.nick?chat" title="@item.fullName"><span class="ico"><i class="fa  fa-skype"></i></span><span class="title_">@item.fullName</span></a></li>
                        }
                        else if (item.sType == 2)
                        {
                            <li><a href="tel:@item.phone" title="@item.fullName"><span class="ico"><i class="fa  fa-phone"></i></span><span class="title_">@item.fullName: @item.phone</span></a></li>
                        }
                        else
                        {
                            <li><a href="@("http://zalo.me/"+item.nick)" title="@item.fullName"><span class="ico"><i class="fa  fa-phone"></i></span><span class="title_">@item.fullName</span></a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>


