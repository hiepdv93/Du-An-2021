@model NTSPRODUCT.Models.Product
@{
    ViewBag.Title = "Administrator - Cập nhật sự kiện";
    ViewBag.controller = "Cập nhật sự kiện";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<NTSPRODUCT.Models.Tagpro> tags = ViewBag.tags;
    List<string> tagSelect = ViewBag.tagSelect;
    var checkFaq = "";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_1" data-toggle="tab">Thông tin chung</a></li>
                    <li><a href="#tab_3" data-toggle="tab">Thẻ Tag</a></li>
                    <li><a href="#tab_4" data-toggle="tab">Cấu hình seo</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Tên sự kiện</label><span class="text-red">(*)</span>
                                    <input type="text" class="form-control " value="@Model.pro_name" maxlength="800" id="proName" name="proName" placeholder="Tên sự kiện" required="required" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Hình ảnh</label>
                                    <input type="text" class="form-control csinput" maxlength="450" name="proAvata" id="proAvata" value="@Model.proAvata" placeholder="Chọn ảnh" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Url</label>
                                    <input type="text" class="form-control " placeholder="Url sự kiện" value="@Model.pro_key" maxlength="800" id="pro_key" name="pro_key" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Đơn vị tổ chức</label>
                                    <input type="text" class="form-control " placeholder="Đơn vị tổ chức.." value="@Model.unit" maxlength="450" name="unit" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Địa chỉ tổ chức</label>
                                    <input type="text" class="form-control " placeholder="Địa chỉ tổ chức.." value="@Model.place" maxlength="450" name="place" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Loại hội trường</label>
                                    <input type="text" class="form-control " placeholder="Loại hội trường.." value="@Model.type" maxlength="450" name="type" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Diện tích</label>
                                    <input type="text" class="form-control " placeholder="Diện tích.." value="@Model.acreage" maxlength="450" name="acreage" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Thứ tự</label><span class="text-red">(*)</span>
                                    <input type="number" value="@Model.proOrder" class="form-control " name="proOrder" required="required" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="display-block">Hiển thị</label>
                                    <label class="switch">
                                        <input type="checkbox" name="proStatus" @(Model.active == true ? "checked" : "")>
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-2" style="display:none">
                                <div class="form-group">
                                    <label class="display-block">sự kiện KM</label>
                                    <label class="switch">
                                        <input type="checkbox" name="proHot" @(Model.pro_hot == true ? "checked" : "")>
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="display-block">Hiện trang chủ</label>
                                    <label class="switch">
                                        <input type="checkbox" name="proHome" @(Model.pro_home == true ? "checked" : "")>
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="clearfix"></div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Mô tả ngắn</label><span class="text-red"></span>
                                    <textarea rows="3" maxlength="800" class="form-control" name="desPro">@Model.desPro</textarea>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label>Giới thiệu ngắn trang chi tiết</label>
                            @Html.TextAreaFor(u => u.introContent)
                        </div>
                        <div class="form-group">
                            <label>Chi tiết sự kiện(Tab1)</label>
                            @Html.TextAreaFor(u => u.proContentTab1)
                        </div>

                    </div>

                    <div class="tab-pane" id="tab_3">
                        <input type="hidden" name="Tagnumber" value="@tags.Count" />
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th width="50px" class="text-center">STT</th>
                                    <th width="60px" class="text-center">Chọn</th>
                                    <th>Tên thẻ tag</th>
                                    <th width="300px">Url</th>
                                    <th width="100px" class="text-center">Thứ tự</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < tags.Count; i++)
                                {
                                    if (tagSelect.Contains(tags[i].tagId))
                                    {
                                        checkFaq = "checked='checked'";
                                    }
                                    else { checkFaq = ""; }
                                    <tr>
                                        <td class="text-center">@(i + 1)</td>
                                        <td class="text-center">
                                            <input type="hidden" id="valueTag_@i" name="valueTag_@i" value="@tags[i].tagId" />
                                            <input @checkFaq type="checkbox" id="ckTag_@i" name="ckTag_@i" />
                                        </td>
                                        <td>@tags[i].tagName</td>
                                        <td>@tags[i].tagKey</td>
                                        <td>@tags[i].tagOrder</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="tab_4">
                        <div class="form-group">
                            <label>Tile seo </label>
                            <textarea type="text" class="form-control" name="titleSeo" rows="2" maxlength="800" placeholder="Tile seo">@Model.titleSeo</textarea>
                        </div>
                        <div class="form-group">
                            <label>Keyword seo </label>
                            <textarea type="text" class="form-control" name="keySeo" rows="2" maxlength="800" placeholder="Keyword seo">@Model.keySeo</textarea>
                        </div>
                        <div class="form-group">
                            <label>Description seo </label>
                            <textarea type="text" class="form-control" name="desSeo" rows="2" maxlength="800" placeholder="Description seo">@Model.desSeo</textarea>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <input type="submit" hidden id="news-Submit" />
                    <button type="button" onclick="CheckKey()" class="btn btn-primary  margin-r-5"><i class="glyphicon glyphicon-floppy-save"></i> Lưu lại</button>
                    <a href="/Prodcuts/Index" class="btn btn-default"><i class="fa fa-mail-reply-all"></i> Trở về</a>
                </div>
            </div>
        </div>
    </div>
}


@if (Session["erro"] != null)
{
    <script type="text/javascript">
        toastr.error('@Session["erro"].ToString()');
    </script>
}
@if (Session["erro"] != null) { Session["erro"] = null; }
<script type="text/javascript">

    $('#proName').on('keyup', function () {
        $.ajax({
            url: "/Prodcuts/GenNewKey?name=" + $('#proName').val(),
            type: "POST",
            success: function (data) {
                if (data.ok === true) {
                    $('#pro_key').val(data.rs);
                }
            },
            error: function (response) {

            },
        });
    });
    $('#proName').on('change', function () {
        $.ajax({
            url: "/Prodcuts/GenNewKey?name=" + $('#proName').val(),
            type: "POST",
            success: function (data) {
                if (data.ok === true) {
                    $('#pro_key').val(data.rs);
                }
            },
            error: function (response) {

            },
        });
    });

    function CheckKey() {
        var id = '@Model.id';
        var pro_key = $('#pro_key').val();
        if (pro_key == '' || pro_key == ' ') {
            toastr.error("Chưa nhập url sự kiện", { timeOut: 5000 }); return;
        }
        var model = {
            id: id,
            pro_key: pro_key
        };
        OpenWaiting();
        $.ajax({
            url: "/Prodcuts/CheckKeyUpdate",
            type: "POST",
            data: model,
            success: function (data) {
                CloseWaiting();
                if (data.ok === 2) {
                    toastr.error('Url sự kiện đã tồn tại', { timeOut: 5000 }); return ;
                } else if (data.ok === 3) {
                    toastr.error('Đã xảy ra lỗi vui lòng thử lại', { timeOut: 5000 }); return ;
                } else {
                    $('#news-Submit').click();
                }

            },
            error: function (response) {
                CloseWaiting();
                toastr.error("Đã xảy ra lỗi!", { timeOut: 5000 });
            },
        });
    }

    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }
    $(function () {
        createEditor('vi', 'proContentTab1');
        createEditor('vi', 'introContent');

    });
</script>
<script>
    $('.datepicker').datepicker({
        format: 'dd/mm/yyyy',
        endDate: '+0d',
        autoclose: true
    });
</script>
<script type="text/javascript">
    $(function () {
        $("#proAvata").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#proAvata").val(fileUrl);
            };
            finder.popup();
        });
    });

</script>
