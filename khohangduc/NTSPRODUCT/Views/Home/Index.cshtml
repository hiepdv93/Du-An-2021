@model IList<NTSPRODUCT.Models.LichSuTruyCap>
@{
    ViewBag.Title = "Administrator - Hệ thống quản trị website";
    ViewBag.controller = "Hệ thống quản trị website " + Request.Url.Host;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<style>
    .uppercase {
        text-transform: uppercase;
        border-bottom: 1px solid #f4f4f4;
    }
    .card-success {
        background-color: #fefefe;
    }
    .card-success .card-header {
        background-color: #28a745;
        color: white;
    }
   
    .card {
        box-shadow: 0 0 1px rgb(0 0 0 / 13%), 0 1px 3px rgb(0 0 0 / 20%);
        margin-bottom: 1rem;
    }
    
    .card-header {
        background-color: transparent;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 2px 5px;
        position: relative;
        border-top-left-radius: .25rem;
        border-top-right-radius: .25rem;
    }
</style>
<script src="https://www.chartjs.org/dist/master/chart.min.js"></script>
<div class="box box-default">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <section class="content">
            <div class="row">

                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3>@ViewBag.teacherCount</h3>
                            <p>Đơn hàng</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="/Oders/index" class="small-box-footer">Chi tiết <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-aqua">
                        <div class="inner">
                            <h3>@ViewBag.proCount</h3>
                            <p>Sản phẩm</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a href="/Prodcuts/Index" class="small-box-footer">Chi tiết <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-yellow">
                        <div class="inner">
                            <h3>@ViewBag.contactCount</h3>
                            <p>Liên hệ tư vấn</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a href="/Contacts/Index" class="small-box-footer">Chi tiết <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <div class="small-box bg-red">
                        <div class="inner">
                            <h3>@ViewBag.newsCount</h3>
                            <p>Tin tức</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="/News/Index" class="small-box-footer">Chi tiết <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                @*<div class="col-lg-6 col-xs-12">
                    <canvas id="myChart"></canvas>
                    <h4 class="box-title uppercase">Biểu đồ thống kê lượt truy cập theo tháng</h4>
