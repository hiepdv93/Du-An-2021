@model NTSPRODUCT.Models.Config
@{
    var catepro = (List<NTSPRODUCT.Models.Category>)ViewBag.catepro;
    var conf = (NTSPRODUCT.Models.Config)ViewBag.conf;
    var newNew = (List<NTSPRODUCT.Models.News>)ViewBag.newNew;
    var newHot = (List<NTSPRODUCT.Models.News>)ViewBag.newHot;
    var slide = (List<NTSPRODUCT.Models.Slide>)ViewBag.slide;
    bool isMobile = Request.Browser.IsMobileDevice;
}

<section id="jssor_1" style="position:relative;margin:0 auto;top:0px;left:0px;width:1300px;height:370px;overflow:hidden;visibility:hidden;">
    <!-- Loading Screen -->
    <div data-u="loading" class="jssorl-009-spin" style="position:absolute;top:0px;left:0px;width:100%;height:100%;text-align:center;background-color:rgba(0,0,0,0.7);">
        <img alt="" style="margin-top:-19px;position:relative;top:50%;width:38px;height:38px;" src="~/Content/CssSite/images/spin.svg" />
    </div>
    <div data-u="slides" style="cursor:default;position:relative;top:0px;left:0px;width:1300px;height:370px;overflow:hidden;">
        @foreach (var item in slide)
        {
            <div>
                <img alt="@item.name" data-u="image" src="@item.images" />
            </div>
        }
    </div>
    <!-- Arrow Navigator -->
    <div data-u="arrowleft" class="jssora051" style="width:65px;height:65px;top:0px;left:25px;" data-autocenter="2" data-scale="0.75" data-scale-left="0.75">
        <svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
            <polyline class="a" points="11040,1920 4960,8000 11040,14080 "></polyline>
        </svg>
    </div>
    <div data-u="arrowright" class="jssora051" style="width:65px;height:65px;top:0px;right:25px;" data-autocenter="2" data-scale="0.75" data-scale-right="0.75">
        <svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
            <polyline class="a" points="4960,1920 11040,8000 4960,14080 "></polyline>
        </svg>
    </div>
</section>


<section class="awe-section-3">
    <div class="section_dich_vu">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 evo_dich_vu_title text-center">
                    <h4 class="section_dich_vu_title">DỊCH VỤ CỦA CHÚNG TÔI</h4>
                </div>
            </div>
            <div class="row row-dich-vu">
                @foreach (var item in catepro)
                {
                    <div class="col-md-4 col-sm-4 col-xs-6">
                        <div class="evo-box-dich-vu">
                            <div class="evo-box-dich-vu-group">
                                <div class="evo-box-dich-vu-image">
                                    <img src="@item.cateImage" alt="@item.cateName" class="img-responsive center-block">
                                </div>
                                <div class="content-box-dich-vu hidden-sm hidden-xs">@Html.Raw(item.cateDesShot)</div>
                            </div>
                            <h3><a href="/nhom-dich-vu/@item.cateKey" title="@item.cateName">@item.cateName</a></h3>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<section class="awe-section-3">
    <div class="container space-40">
        <div class="row">
            <div class="col-md-6">
                <div class="title-text space-20">
                    <h2><a href="tin-tuc" title="Dịch vụ">@ClassExten.GetLangKey("news")</a></h2>
                    <a class="read-more" href="/nhom-dich-vu" title="@ClassExten.GetLangKey("key_xemthem")">@ClassExten.GetLangKey("key_xemthem")<i class="fa fa-angle-double-right"></i></a>
                </div>
                <div class="home-blog">
                    @foreach (var item in newNew)
                    {
                        <div class="item">
                            <a class="thumb img-shine" href="/dich-vu/@item.new_key" title="@item.title">
                                <img src="@item.newImage" alt="@item.title">
                            </a>
                            <div class="text">
                                <h3><a href="/dich-vu/@item.new_key" title="@item.title">@item.title</a></h3>
                                <div class="date">@item.createDate.Value.ToString("dd") <span>T @item.createDate.Value.ToString("MM")</span></div>
                                <p>@item.descript</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
            @if (!isMobile)
            {
                <div class="col-md-6">
                    <div class="title-text space-20">
                        <h2>DỊCH VỤ HOT</h2>
                    </div>
                    <div class="home-box-lightbox">
                        @foreach (var item in newHot)
                        {
                            <a href="/dich-vu/@item.new_key" title="@item.title">
                                <img class="img-responsive basic" src="@item.newImage" alt="@item.title">
								<div class="content-box-dich-vu hidden-sm hidden-xs">@item.descript</div>
                            </a>
                        }
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<section class="page-detail">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xs-12 col-lg-63">
                <div class="form-contact">
                    <form action="" method="post" class="img-responsive">
                        <div class="card-body p-3">
                            <!--Body-->
                            <div class="form-group col-lg-6 col-sm-6">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-texts"><i class="fa fa-user"></i></div>
                                    </div>
                                    <input type="hidden" id="referencesId" value="-1">
                                    <input type="text" class="form-control" id="ctName" name="nombre" placeholder="@ClassExten.GetLangKey("key_hoten") (*)">
                                </div>
                            </div>
                            <div class="form-group col-lg-6 col-sm-6">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-texts"><i class="fa fa-envelope"></i></div>
                                    </div>
                                    <input type="email" class="form-control" id="ctEmail" name="email" placeholder="Email...">
                                </div>
                            </div>
                            <div class="form-group col-lg-6 col-sm-6">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-texts"><i class="fa fa-phone"></i></div>
                                    </div>
                                    <input type="text" class="form-control" id="ctPhone" name="nombre" placeholder="@ClassExten.GetLangKey("key_sdt") (*)">
                                </div>
                            </div>
                            <div class="form-group col-lg-6 col-sm-6">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-texts"><i class="fa fa-home"></i></div>
                                    </div>
                                    <input type="text" class="form-control" id="ctAddress" name="nombre" placeholder="@ClassExten.GetLangKey("key_diachi") ..">
                                </div>
                            </div>
                            <div class="form-group col-lg-12 col-sm-12">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-texts"><i class="fa fa-pencil"></i></div>
                                    </div>
                                    <textarea class="form-control" id="ctNote" rows="3" placeholder="@ClassExten.GetLangKey("key_ndmota") (*)"></textarea>
                                </div>
                            </div>
                            <div class="text-right col-lg-12 col-sm-12">
                                <div class="btn">
                                    <button onclick="SendContact()" type="button" value="Enviar" class="submit">@ClassExten.GetLangKey("key_guilienhe") <i class="fa fa-send"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 col-xs-12 col-lg-6">
                <div class="title-contact">
                    @Html.Raw(Model.conTact)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12 f-none grab-float">
                <div class="wrapper">
                    <div class="tab-list-wrapper">
                        <ul class="tabs-maps">
                            <li class="tab-link current" data-tab="tab-map-1">
                                <span>Video nổi bật</span>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div id="tab-map-1" class="tab-content-maps current">
                            <div class="maps-home">
                                @Html.Raw(Model.homeVideo)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
