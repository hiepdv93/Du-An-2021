                for (var i = 0 ; i < data.length ; i++)
                    str += "<option value =" + data[i].id + ">" + data[i].name + "</option>";
                $("#cat").html(str).show();
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }
    getCategory();

    //load customer type =-1
