                                }
                                @if (!string.IsNullOrEmpty(conf.faceBook))
                                {
                                    <li><a href="@conf.faceBook" title="facebook"><i class="fa fa-facebook"> </i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(conf.google))
                                {
                                    <li><a href="@conf.google" title="instagram"><i class="fa fa-google-plus"> </i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(conf.youTube))
                                {
                                    <li><a href="@conf.youTube" title="youtube"><i class="fa fa-youtube"> </i></a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright clearfix">
        <div class="container">
            <div class="inner clearfix">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="text-center copy-right-text">
                            <span class="cungcap"><a href="#" title="@conf.shopName">@conf.fax</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<section id="hotline-zalo-fb">
    @if (!string.IsNullOrEmpty(conf.hotLine))
    {
        <a href="tel:@conf.hotLine" class="call-icon" rel="nofollow">
            <img src="~/Content/CssSite/images/hotline.png" />
            <span>Hotline</span>
        </a>
    }
    @if (!string.IsNullOrEmpty(conf.zaloChat))
    {
        <a href="@("http://zalo.me/"+conf.zaloChat)" class="zalo">
            <img src="~/Content/CssSite/images/zalo.png" />
            <span>Zalo</span>
        </a>
    }
    @if (!string.IsNullOrEmpty(conf.fbChat))
    {
        <a href="@conf.fbChat" target="_blank" class="mes">
            <img src="~/Content/CssSite/images/fb.png" />
            <span>Facebook</span>
        </a>
    }
</section>
<style>
    .footer {
        background-color: #00709E;
    }

        .footer .site-footer h4 span {
            color: white;
        }
</style>

<button onclick="topFunction()" id="myBtn" title="Go to top">
    <i style="color: darkgreen; font-size: 30px;" class="fa fa-arrow-circle-up" aria-hidden="true"></i>
</button>
<style>
    .footer {
        background-color: #00709E;
    }

        .footer .site-footer h4 span {
            color: white;
        }

    #myBtn {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 30px;
        z-index: 99;
        font-size: 18px;
        border: none;
        outline: none;
        background-color: darkgray;
        color: white;
        cursor: pointer;
        padding: 6px 10px;
        border-radius: 4px;
    }

        #myBtn:hover {
            background-color: darkgray;
        }

    .level0 .level1 a span:hover {
        color: #e33725 !important
    }
</style>
<script>
    //Get the button
    var mybutton = document.getElementById("myBtn");

    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.style.display = "block";
        } else {
            mybutton.style.display = "none";
        }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>
