@model IList<NTSPRODUCT.Models.Product>
@{
    var conf = (NTSPRODUCT.Models.Config)ViewBag.conf;
    var cateP = (NTSPRODUCT.Models.Category)ViewBag.cateP;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="bread-crumb">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="rows">
            <div class="col-xs-12 a-left">
                <ul class="breadcrumb" itemscope="">
                    <li class="home">
                        <a itemprop="url" href="/"><span itemprop="title">@ClassExten.GetLangKey("home")</span></a>
                        <span class="mr_lr">&nbsp;<i class="fa fa-caret-right"></i>&nbsp;</span>
                    </li>
                    @if (cateP != null)
                    {
                        <li class="home">
                            <a itemprop="url" href="/danh-muc" title="@ClassExten.GetLangKey("key_danhmuc")"><span itemprop="title">@ClassExten.GetLangKey("key_danhmuc")</span></a>
                            <span class="mr_lr">&nbsp;<i class="fa fa-caret-right"></i>&nbsp;</span>
                        </li>
                        <li><strong><span itemprop="title">@cateP.cateName</span></strong></li>
                    }
                    else
                    {
                        <li><strong><span itemprop="title"> Danh mục sản phẩm</span></strong></li>
                    }

                </ul>
            </div>
        </div>
    </div>
</section>

<div class="list-prodcut-home">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="pro-title">
                    <h3>@(cateP!=null? cateP.cateName: "Danh mục sản phẩm")</h3>
                </div>
            </div>
            @if (Model != null)
            {
                foreach (var item in Model)
                {

                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="pro-home">
                            <div class="pro-img">
                                <a href="/san-pham/@item.pro_key" title="@item.pro_name"><img src="@item.proAvata" alt="@item.pro_name"></a>
                            </div>
                            <div class="pro-name">
                                <a href="/san-pham/@item.pro_key" title="@item.pro_name">@item.pro_name</a>
                            </div>
                            <div class="pro-price">
                                <span>@((item.proPrice_sale!=null && item.proPrice_sale!=0)? item.proPrice_sale.Value.ToString("N0"):"Liên hệ" )</span>
                                <span>@item.brank</span>
                            </div>
                            <div class="pro-sub">
                                <a href="/san-pham/@item.pro_key" title="@item.pro_name">Chọn mua</a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>
