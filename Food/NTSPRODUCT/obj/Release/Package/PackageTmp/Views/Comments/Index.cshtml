@model IList<NTSPRODUCT.Models.Contact>

@{
    ViewBag.Title = "Administrator - Danh sách bình luận";
    ViewBag.controller = "Quản lý bình luận";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Thông tin tìm kiếm</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-2">
                <input type="text" id="ProName" class="form-control" placeholder="Sản phẩm.." />
            </div>
            <div class="col-md-2">
                <input type="text" id="nameSearch" class="form-control" placeholder="Họ tên.." />
            </div>
            <div class="col-md-2">
                <input type="text" id="emailSearch" class="form-control" placeholder="Email.." />
            </div>
            <div class="col-md-2">
                <select class="form-control" id="typeSearch">
                    <option value="">Tất cả bình luận</option>
                    <option value="1">Sản phẩm</option>
                    <option value="0">Tin tức</option>
                </select>
            </div>
            <div class="col-md-4 text-right">
                <button type="button" class="btn  btn-success" onclick="SearchContacts()"><i class="fa fa-fw fa-search"></i> Tìm kiếm</button>
                <button class="btn btn-default" type="button" onclick="RefreshContacts()"><i class="fa fa-fw fa-refresh"></i> Làm mới</button>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách bình luận</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>
                                Tổng số <b class="badge badge-primary" id="count_data">0</b> bản ghi
                            </h4>
                        </div><div class="col-sm-6 text-right">
                        </div>
                    </div>
                    <div class="row" id="row_data">

                    </div>

                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
<!-- /.row -->
<script src="~/Content/AdminJSController/Comment/CommentListControllers.js"></script>
<div id="modamDetail" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog w700">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #5db2ff; color: white">
                <button type="button" id="close_producet" class="close" data-dismiss="modal">&times;</button>
                <h4 class="dntitle">Thông tin bình luận</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Khách hàng:</label>
                                <span class="form-control" name="name" id="namev"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Phone:</label>
                                <span class="form-control" name="phone" id="phonev"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Email:</label>
                                <span class="form-control" name="email" id="emailv"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Nội dung tin nhắn:</label>
                                <span class="form-control" style="height:auto" id="notev" name="notev"></span>
                            </span>
                        </div>
                    </div>

                </div>
                <hr />
                <div class="modal-footer" style="margin-top: -20px;">
                    <button type="button" id="closeprffffoduct" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>
