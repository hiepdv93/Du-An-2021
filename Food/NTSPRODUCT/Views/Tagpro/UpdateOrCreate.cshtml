<div id="modamSlide" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog w700">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #5db2ff; color: white">
                <button type="button" id="close_producet" class="close" data-dismiss="modal">&times;</button>
                <h4 class="titleSlide"></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Tên thẻ</label><span class="text-red">(*)</span>
                                <input type="hidden" value="" id="id" />
                                <input type="text" maxlength="150" class="form-control" name="name" id="tagName" placeholder="Tên tag.." required>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Loại thẻ</label>
                            <select name="typeTag" id="typeTag" class="form-control csinput">
                                <option value="1">Tag sản phẩm</option>
                                <option value="2">Tag tin tức</option>
                            </select>
                        </div>
                    </div>


                    <div class="col-sm-4">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Thứ tự</label><span class="text-red">(*)</span>
                                <input type="number" value="1" class="form-control" placeholder="Thứ tự" id="tagOrder" name="numberOder" required="required">
                            </span>
                        </div>
                    </div>
                </div>
                    <hr />
                    <div class="modal-footer" style="margin-top: -20px;">
                        <button type="submit" class="btn btn-primary" onclick="CreateOrUpdate()"><i class="glyphicon glyphicon-floppy-save"></i> Lưu lại</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Đóng</button>
                    </div>
                </div>
        </div>
    </div>
</div>

