<body>
    <div id="loader_id"></div>
    <div id="overlay" onclick="off()"></div>
    @{
        string langSite = ClassExten.GetLangSite();
        string path = HttpContext.Current.Request.Url.AbsolutePath;
    }
    <div class="container-fluid padding0">
        @if (path.Equals("/") || path.Equals(""))
        {
            <div class="main">
                @Html.Action("ChildHeader", "ChildView", new { lang = langSite })
                @RenderBody()
                @Html.Action("ChildFooter", "ChildView", new { lang = langSite })
            </div>
        }
        else
        {
            <div class="page-detail">
                @Html.Action("ChildHeader", "ChildView", new { lang = langSite })
                @RenderBody()
                @Html.Action("ChildFooter", "ChildView", new { lang = langSite })
            </div>
        }

    </div>

    <script src="~/Content/CssSite/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/CssSite/js/bootstrap.min.js"></script>
    <script src="~/Content/CssSite/js/owl.carousel.min.js"></script>
    <script src="~/Content/CssSite/js/owl.carousel.js"></script>
    <script src="~/Content/CssSite/js/lightslider.js"></script>
    <script src='~/Content/CssSite/js/maina.js?v=8.2' type='text/javascript'></script>

    <script src="~/Content/toastr/toastr.js"></script>
    <script src="~/Content/AdminJSController/script_validate.js?v=8.2"></script>
    <script src="~/Content/SiteJSController/HomeControllers.js?v=8.2"></script>
    <script src="~/Content/CssSite/js/jquery-scrolltofixed-min.js?v=8.2"></script>
    <script src="~/Content/CssSite/js/jquery-scrolltofixed.js?v=8.2"></script>

    <script type="text/javascript">
        $('.header-top').scrollToFixed();
    </script>
    <script type="text/javascript">
        $('.aside-content').scrollToFixed();
    </script>
    <script>

        PushCount();

        (function ($) {
            var ico = $('<i class="fa fa-caret-right"></i>');
            $('nav#menu li:has(ul) > a').append(ico);

            $('nav#menu li:has(ul)').on('click', function () {
                $(this).toggleClass('open');
            });

            $('a#toggle').on('click', function (e) {
                $('html').toggleClass('open-menu');
                return false;
            });


            $('div#overlay').on('click', function () {
                $('html').removeClass('open-menu');
            })

        })(jQuery)
    </script>
    @if (path.Equals("/") == true || path.Equals("") == true)
    {
        <script>
            $(document).ready(function () {
                $("#content-slider").lightSlider({
                    loop: true,
                    keyPress: true
                });

            });

            $('#owl-video-home').owlCarousel({
                loop: true,
                margin: 10,
                responsiveClass: true,
                autoplay: true,
                autoplayTimeout: 2000,
                autoplayHoverPause: true,
                responsive: {
                    0: {
                        items: 1,
                        nav: true
                    },
                    600: {
                        items: 3,
                        nav: false
                    },
                    1000: {
                        items: 4,
                        nav: true,
                        loop: false
                    }
                }
            })
        </script>

        <script type="text/javascript">
            var owl = $('#owl-slide-right');
            owl.owlCarousel({
                items: 1,
                loop: true,
                margin: 10,
                autoplay: true,
                autoplayTimeout: 3000,
                autoplayHoverPause: true
            });
        </script>
    }
    @if (path.Contains("/san-pham/") == true)
    {
        <script>

            $('#image-gallery').lightSlider({
                gallery: true,
                item: 1,
                thumbItem: 3,
                slideMargin: 0,
                speed: 500,
                auto: true,
                loop: true,
                onSliderLoad: function () {
                    $('#image-gallery').removeClass('cS-hidden');
                }
            });
        </script>

    }
</body>
</html>
