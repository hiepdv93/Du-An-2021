<script type="text/javascript">
    $('#proName').on('keyup', function () {
        $.ajax({
            url: "/Prodcuts/GenNewKey?name=" + $('#proName').val(),
            type: "POST",
            success: function (data) {
                if (data.ok === true) {
                    $('#pro_key').val(data.rs);
                }
            },
            error: function (response) {

            },
        });
    });
    $('#proName').on('change', function () {
        $.ajax({
            url: "/Prodcuts/GenNewKey?name=" + $('#proName').val(),
            type: "POST",
            success: function (data) {
                if (data.ok === true) {
                    $('#pro_key').val(data.rs);
                }
            },
            error: function (response) {

            },
        });
    });


    function CheckKey() {
        var id = '';
        var pro_key = $('#pro_key').val();
        if (pro_key == '' || pro_key == ' ') {
            toastr.error("Chưa nhập url sản phẩm", { timeOut: 5000 }); return;
        }
        var model = {
            id: id,
            pro_key: pro_key
        };
        OpenWaiting();
        $.ajax({
            url: "/Prodcuts/CheckKeyCreate",
            type: "POST",
            data: model,
            success: function (data) {
                CloseWaiting();
                if (data.ok === 2) {
                    toastr.error('Url sản phẩm đã tồn tại', { timeOut: 5000 }); return;
                } else if (data.ok === 3) {
                    toastr.error('Đã xảy ra lỗi vui lòng thử lại', { timeOut: 5000 }); return;
                } else {
                    $('#news-Submit').click();
                }
            },
            error: function (response) {
                CloseWaiting();
                toastr.error("Đã xảy ra lỗi!", { timeOut: 5000 });
            },
        });
    }
    function addNomal() {
        $('#addType').val('0');
        CheckKey();
    }
    function addContinue() {
        $('#addType').val('1');
        CheckKey()
    }

    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }
    $(function () {
        createEditor('vi', 'proContentTab1');
        createEditor('vi', 'proContentTab2');
       // createEditor('vi', 'proContentTab3');
        createEditor('vi', 'introContent');
    });
</script>
