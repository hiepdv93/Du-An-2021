@model IList<NTSPRODUCT.Models.Adv>
@{
    ViewBag.Title = "Administrator - Danh sách hình ảnh";
    ViewBag.controller = "Quản lý hình ảnh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- SELECT2 EXAMPLE -->
<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Thông tin tìm kiếm</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-3">
                <input type="text" id="nameSearch" class="form-control" placeholder="Tên hình ảnh.." />
            </div>
            <div class="col-md-3">
                <select name="typeSearch" id="typeSearch" class="form-control">
                    <option value="">Tất cả vị trí</option>
                    <option value="1">Dưới Slide</option>
                    <option value="2">Phải slide</option>
                    <option value="3">Bên phải chi tiết SP</option>
                </select>
            </div>
            <div class="col-md-6 text-right">
                <button type="button" class="btn  btn-success" onclick="SearchAdvs()"><i class="fa fa-fw fa-search"></i> Tìm kiếm</button>
                <button class="btn btn-default" type="button" onclick="RefreshAdvs()"><i class="fa fa-fw fa-refresh"></i> Làm mới</button>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách hình ảnh</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>
                                Tổng số <b class="badge badge-primary" id="count_data">0</b> bản ghi
                            </h4>
                        </div><div class="col-sm-6 text-right">
                            <button class="btn btn-info" type="button" onclick="CreateAdv()"><i class="fa fa-fw fa-plus"></i>Thêm mới</button>
                        </div>
                    </div>
                    <div class="row" id="row_data">

                    </div>

                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
<!-- /.row -->
<div id="divModam"></div>
<script src="~/Content/AdminJSController/HinhAnh/HinhAnhListController.js"></script>