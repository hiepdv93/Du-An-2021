@model IList<NTSPRODUCT.Models.Product>
@{
    var conf = (NTSPRODUCT.Models.Config)ViewBag.conf;
    var cateP = (NTSPRODUCT.Models.Category)ViewBag.cateP;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("NavMenu", "ChildView")

<div class="product-de">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-xs-12">
                <div class="breack">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">
                            <nav class="nav-bre" aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/" title="@ClassExten.GetLangKey("home")">@ClassExten.GetLangKey("home")</a></li>
                                    <li class="breadcrumb-item"><a href="/danh-muc" title="Sản phẩm">Sản phẩm</a></li>
                                    <li class="breadcrumb-item active" aria-current="page"><a href="#" title="@(cateP!=null? cateP.cateName: "Danh mục sản phẩm")">@(cateP!=null? cateP.cateName: "Danh mục sản phẩm")</a></li>
                                </ol>
                            </nav>
                        </div>
                    </nav>
                </div>

            </div>

        </div>
    </div>
</div>

<div class="list-prodcut-home">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="pro-title">
                    <h3>@(cateP!=null? cateP.cateName: "Danh mục sản phẩm")</h3>
                </div>
            </div>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="pro-home">
                            <div class="pro-img">
                                <a href="/san-pham/@item.pro_key" title="@item.pro_name"><img src="@item.proAvata" alt="@item.pro_name"></a>
                            </div>
                            <div class="pro-name">
                                <a href="/san-pham/@item.pro_key" title="@item.pro_name">@item.pro_name</a>
                            </div>
                            <div class="pro-price">
                                <span>@((item.proPrice_sale!=null && item.proPrice_sale!=0)? item.proPrice_sale.Value.ToString("N0"):"Liên hệ" )</span>
                                <span>@item.brank</span>
                            </div>
                            <div class="pro-sub">
                                <a href="/san-pham/@item.pro_key" title="@item.pro_name">Chọn mua</a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>
