@{
    ViewBag.Title = "Đăng ký thành viên";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.datetimepicker.js"></script>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="ContactForm">
            <h5> Form đăng ký thành viên
            </h5>
            @using (Html.BeginForm())
            {
                <div class="row">
                    <div class="col-md-6">
                        <label>
                            Họ tên
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="text" name="name" required="required">
                    </div>
                    <div class="col-md-6">
                        <label>
                            Email
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="email" name="email" id="emailid" required="required">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>
                            Phone 
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="number" name="phone" required="required">
                    </div>
                    <div class="col-md-6">
                        <label>
                            Mật khẩu
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="password" name="pass1" id="pass1" required="required">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>
                            Ngày sinh 
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="text" name="birth" id="birth" required="required">
                    </div>
                    <div class="col-md-6">
                        <label>
                            Nhập lại
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="password" name="pass2" id="pass2" required="required">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>
                            Địa chỉ 
                            <strong class="red">
                            </strong>
                        </label>
                        <input class="inputfild" type="text" name="address" >
                    </div>
                    <div class="col-md-6">
                        <label>
                            <strong class="red">@ViewBag.erro
                            </strong>
                        </label>
                    </div>
                </div>
                
                 <button class="pull-right" type="reset">
                    Làm mới
                </button>
                <button class="pull-right" type="submit" id="subid">
                    Đăng ký
                </button> 
            }
        </div>
    </div>
</div>
    <script type="text/javascript">
        $('#birth').datetimepicker({
        onGenerate: function (ct) {
            $(this).find('.xdsoft_date')
                .toggleClass('xdsoft_disabled');
        },
        minDate: '01/2/1940',
        maxDate: '01/2/2040',
        timepicker: false
    });
</script>

<script type="text/javascript">
    var password1 = document.getElementById('pass1');
    var password2 = document.getElementById('pass2');

    var checkPasswordValidity = function () {
        if (password1.value == password2.value) {
            password2.setCustomValidity('');
        }
        else { password2.setCustomValidity('Mật khẩu mới phải giống nhau.'); }
    };

    password1.addEventListener('change', checkPasswordValidity, false);
    password2.addEventListener('change', checkPasswordValidity, false);

</script>
<script>
    $('#emailid').keyup(function () {
        postcheck();
    });
    $('#emailid').change(function () {
        postcheck();
    });
    function postcheck()
    {
        var email = $('#emailid').val();
        $.ajax({
            url: "/Khachhang/Checkmail",
            data: { email: email },
            cache: false,
            type: "POST",
            success: function (data) {
                if (data == false) {
                    alert('Email đã tồn tại!');
                    $("#subid").css("display", "none");
                } else {
                    $("#subid").css("display", "block");
                }
            },
            error: function (reponse) {
                alert("error : " + reponse);
            }
        });
    }
</script>