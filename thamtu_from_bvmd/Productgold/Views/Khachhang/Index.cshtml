@model Productgold.Models.Customer
@{
    ViewBag.Title = "Thông tin khách hàng";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/jquery.datetimepicker.js"></script>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="ContactForm">
            <h5>Form thông tin thành viên
            </h5>
            @using (Html.BeginForm())
            {
                <div class="row">
                    <div class="col-md-6">
                        <label>
                            Họ tên
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="text" name="name" required="required" value="@Model.fullname">
                    </div>
                    <div class="col-md-6">
                        <label>
                            Email
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="email" name="email" required="required" value="@Model.email" disabled="disabled">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>
                            Phone 
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="number" name="phone" required="required" value="@Model.phone">
                    </div>

                    <div class="col-md-6">
                        <label>
                            Ngày sinh 
                            <strong class="red">*
                            </strong>
                        </label>
                        <input class="inputfild" type="text" name="birth" id="birth" required="required" value="@Model.birth">
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>
                            Địa chỉ 
                            <strong class="red"></strong>
                        </label>
                        <input class="inputfild" type="text" name="address" value="@Model.addres">
                    </div>
                    <div class="col-md-6">
                        <label>
                            <strong class="red">@ViewBag.erro
                            </strong>
                        </label>
                    </div>
                </div>
                  <a href="/Khachhang/Doimatkhau" >
                   Bạn muốn đổi mật khẩu?
                </a>
                <button class="pull-right" type="submit">
                    Đổi thông tin
                </button> 
            }
        </div>
    </div>
</div>
    <script type="text/javascript">
        $('#birth').datetimepicker({
        onGenerate: function (ct) {
            $(this).find('.xdsoft_date')
                .toggleClass('xdsoft_disabled');
        },
        minDate: '01/2/1940',
        maxDate: '01/2/2040',
        timepicker: false
    });
</script>