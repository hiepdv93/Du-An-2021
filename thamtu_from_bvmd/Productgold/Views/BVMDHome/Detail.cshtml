@model IList<Productgold.Models.News>
@{
    Layout = "~/Views/Shared/_LayoutPageHome2.cshtml";
    var data = (Productgold.Models.News)ViewBag.dataNews;
}

<div class="products">
    <div class="container no-padding">
        <div class="col-xs-12 col-5 col-sm-7 no-padding">
            <div class="blog-type">
                <div class="bre-cum">
                    <ul>
                        <li><a href="/" title="@ViewBag.home">@ViewBag.home</a></li>
                        <li>>></li>
                        <li><a href="/Tin-tuc" title="@ViewBag.news">@ViewBag.news</a></li>
                        @Html.Raw(ViewBag.navTin)
                    </ul>
                </div><!--end bre-cum-->
                <div class="content-blog">
                    <h4>@data.title</h4>
                    <div class="date">
                        <p>
                            <i class="fa fa-clock-o" aria-hidden="true"></i> @data.createdate.Value.ToString("HH:mm") / @data.createdate.Value.ToString("dd/MM/yyyy")
                        </p>
                    </div><!--end date-->
                    <p>
                        <b>@data.descript </b>
                    </p>
                    @Html.Raw(data.contents)

                <div class="other-list">
                    <h4>@ViewBag.key_baivietcungchuyenmuc:</h4>
                    <ul>
                        @foreach (var item in Model)
                        {
                            <li><a href="/Tin/@item.new_key" title="@item.title">@item.title</a></li>
                        }
                    </ul>
                </div><!--end other-list-->
            </div><!--end content-blog-->

        </div><!--ed blog-type-->
    </div><!--end col-sm-7-->


    <div class="col-xs-12 col-5 col-sm-5 col-5xs no-padding">
        @Html.Action("GenNewRight", "TPAImport")
    </div><!--end col-sm-5-->
</div><!--end container-->
</div><!--end products-->
