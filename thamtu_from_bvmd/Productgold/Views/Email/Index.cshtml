@model IList<Productgold.Models.email>
@{
    ViewBag.Title = "Administrator - Danh sách email đăng kí";
    ViewBag.controller = "Danh sách email đăng kí";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="box">
        <div class="box-body table-responsive">
            <table id="example1" class="table table-bordered table-striped" style="text-align: center;">
                <thead>
                    <tr>
                        @*<th>STT</th>*@
                        <th>Email</th>
                        <th width="100px">CHức năng</th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            @*<td>@{var stt = i + 1;} @stt</td>*@
                            <td>@Model[i].email1</td>
                            <td>@Html.ActionLink("Xóa", "Delete", new { id = Model[i].id }, new { @onclick = "return DeleteConfirm()", @class = "fa fa-trash-o" ,@title="Xóa"})</td>
                        </tr>
                                }

                </tbody>

            </table>

        </div>
    </div>
    @Html.Raw(ViewBag.pages)
</div>
