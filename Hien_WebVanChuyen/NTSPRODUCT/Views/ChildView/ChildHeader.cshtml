@model IList<NTSPRODUCT.Models.Menu>
@{
    var conf = (NTSPRODUCT.Models.Config)ViewBag.conf;
    var cateParent = Model.Where(u => u.par_id.Equals(ClassExten.cateParent)).OrderBy(u => u.mOrder).ToList();
    var cateChild = Model.Where(u => !u.par_id.Equals(ClassExten.cateParent)).ToList();
    var isMobile = Request.Browser.IsMobileDevice;

}

<div id="wrapper-start">
    <div class="bg-open-canvas-menu"></div>
    <div class="mys-canvas-menu">
        <div class="close"><i class="bx bx-x"></i></div>
        <div class="content-form-btn">
            <div class="login">
                <a href="" rel="nofollow" target="_blank">
                    Đăng Nhập
                </a>
            </div>
            <div class="resgister">
                <a href="" rel="nofollow" target="_blank">
                    Đăng ký
                </a>
            </div>
            <div class="cart">
                <a href="" rel="nofollow" target="_blank">
                    Giỏ Hàng
                </a>
            </div>
        </div>
        <div class="content-cv">
            <ul id="main-menu" class="canvas-main-menu">
                @foreach (var item in cateParent)
                {
                    <li class="menu-item menu-item-type-custom menu-item-object-custom">
                        <a href="@item.link" title="@item.name">@item.name</a>
                        @Html.Raw(ClassExten.GetCateSiteLevel2(cateChild, item.id))
                    </li>
                }
            </ul>
        </div>
        <div class="info">
            <div class="exchange-rate">
                <p>Tỷ giá: <span>@conf.phone</span> </p>
            </div>
            <div class="hotline">
                <p>Hotline: <span>@conf.hotLine</span></p>
            </div>
        </div>
    </div>
</div>
<header class="header-nav">
    <div class="header-top header-top-wrapper">
        <div class="container">
            <div class="row">
                <div class="header-top-left col-12 col-md-6">
                    <div class="exchange-rate">
                        <i class="bx bxs-dollar-circle"></i>
                        <p>Tỷ giá: <span>@conf.phone</span></p>
                    </div>
                    <div class="hotline">
                        <i class="bx bx-support"></i>
                        <p>Hotline: <span>@conf.hotLine</span></p>
                    </div>
                </div>
                <div class="header-top-right col-12 col-md-6">
                    <div class="my-account">
                        <div class="login">
                            <a href="">
                                <i class="bx bxs-user-detail"></i>
                                Đăng Nhập
                            </a>
                        </div>
                        <div class="dash">|</div>
                        <div class="resgister">
                            <a href="">
                                <i class="bx bx-log-in"></i>
                                Đăng ký
                            </a>
                        </div>
                    </div>
                    <div class="cart">
                        <a href="">
                            <i class="bx bxs-cart"></i>
                            Giỏ Hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main-header-wrapper">
        <div class="container">
            <div class="row">
                <div class="header-left col-8 col-md-3">
                    <div class="logo">
                        <a href="@conf.linkLogo" title="@conf.shopName">
                            <img src="@conf.logoTop" style="height: 57px;" alt="@conf.shopName" />
                        </a>
                    </div>
                </div>
                <div class="header-right col-4 col-md-9">
                    <nav class="header-menu">
                        <ul id="main-menu" class="main-menu">

                            @foreach (var item in cateParent)
                            {
                                <li class="menu-item menu-item-type-custom menu-item-object-custom">
                                    <a href="@item.link" title="@item.name">@item.name</a>
                                    @Html.Raw(ClassExten.GetCateSiteLevel2(cateChild, item.id))
                                </li>
                            }
                        </ul>
                    </nav>
                    <div class="br-icon-menu">
                        <i class="bx bx-menu"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
