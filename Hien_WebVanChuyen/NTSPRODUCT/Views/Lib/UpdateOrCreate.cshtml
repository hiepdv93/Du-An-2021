<div id="modamLib" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog w700">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #5db2ff; color: white">
                <button type="button" id="close_producet" class="close" data-dismiss="modal">&times;</button>
                <h4 class="titleLib"></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Tên thư viện<span class="text-red">(*)</span></label>
                                <input type="hidden" value="" id="libId" />
                                <input type="text" class="form-control" name="linName" maxlength="350" id="linName" placeholder="Tên thư viện.." required>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>File thư viện</label>
                            <input type="text" class="form-control" name="libLink" id="libLink" maxlength="350" placeholder="Chọn file.." required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Loại danh mục</label>
                            <select name="type" id="type" onchange="ChangeTypeCate()" class="form-control">
                                <option value="1">Ngành nghề</option>
                                <option value="3">Giải pháp</option>
                                <option value="4">Hãng sản phẩm</option>
                                <option value="5">Ứng dụng</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="form-group">
                            <label>Chọn danh mục</label>
                            <select name="cateId" id="cateId" required class="form-control"></select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Thứ tự hiển thị</label>
                            <input type="number" value="1" class="form-control" name="libOrder" id="libOrder" placeholder="Nhập thứ tự..">
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="form-group">
                            <label>Ảnh đại diện</label>
                            <input type="text" class="form-control csinput" maxlength="250" name="libImage" id="libImage" placeholder="Chọn ảnh" />
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>Nội dung</label>
                            <textarea type="text" class="form-control csinput" name="libNote" rows="3" id="libNote" placeholder="Nhập nội dung.." />
                        </div>
                    </div>
                </div>
                <hr />
                <div class="modal-footer" style="margin-top: -20px;">
                    <button type="submit" class="btn btn-primary" onclick="CreateOrUpdate()"><i class="glyphicon glyphicon-floppy-save"></i> Lưu lại</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Thoát</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
 
    $(function () {
        $("#libImage").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#libImage").val(fileUrl);
            };
            finder.popup();
        });
    });
    $(function () {
        $("#libLink").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#libLink").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>
