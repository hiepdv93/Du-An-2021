
<div id="modamSlide" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog w700">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #5db2ff; color: white">
                <button type="button" id="close_producet" class="close" data-dismiss="modal">&times;</button>
                <h4 class="titleSlide"></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Họ tên</label><span class="text-red">(*)</span>
                                <input type="hidden" value="" id="id" />
                                <input type="text" class="form-control" name="name" id="fullName" maxlength="100" placeholder="Họ tên.." required>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Email</label><span class="text-red">(*)</span>
                                <input type="text" class="form-control" name="slink" id="email"  maxlength="50" placeholder="email.." required>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Điện thoại</label><span class="text-red">(*)</span>
                            <input type="text" class="form-control csinput"  maxlength="50" name="images" id="phone" placeholder="Điện thoại" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <input type="text" class="form-control csinput" name="images"  maxlength="100" id="addresss" placeholder="Địa chỉ" />
                        </div>
                    </div>
                    
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="display-block">Trạng thái</label>
                            <label class="switch">
                                <input type="checkbox" name="active" checked id="active">
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="modal-footer" style="margin-top: -20px;">
                    <button type="submit" class="btn btn-primary" onclick="CreateOrUpdate()"><i class="glyphicon glyphicon-floppy-save"></i> Lưu lại</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Thoát</button>
                </div>
            </div>
        </div>
    </div>
</div>

