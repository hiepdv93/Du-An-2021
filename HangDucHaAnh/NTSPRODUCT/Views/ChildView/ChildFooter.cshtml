﻿@model IList<NTSPRODUCT.Models.Menu>
@{ var conf = (NTSPRODUCT.Models.Config)ViewBag.conf;}

<footer class="footer">
    <div class="site-footer">
        <div class="container">
            <div class="footer-inner">
                <div class="row">
                    <div class="block block-cs col-xs-12 col-sm-5 col-md-3 col-lg-3">
                        <div class="footer-widget">
                            @Html.Raw(conf.footer)
                        </div>
                    </div>
                    <div class="block block-cs col-xs-12 col-sm-5 col-md-3 col-lg-3">
                        <div class="footer-widget">
                            @Html.Raw(conf.footerExten)
                        </div>
                    </div>
                    <div class="block block-cs col-xs-12 col-sm-3 col-md-2 col-lg-2">
                        <div class="footer-widget">
                            <h4>
                                <span>Chính sách</span>
                            </h4>
                            <ul class="list-menu has-toggle">
                                @foreach (var item in Model)
                                {
                                    <li><a href="@item.link" title="@item.name">@item.name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="block block-cs col-xs-12 col-sm-4 col-md-3 col-lg-3">
                        <div class="footer-widget">
                            @Html.Raw(conf.infoPage)

                            <ul class="list-menu has-toggle social-media-footer" style="display: block;">
                                @if (!string.IsNullOrEmpty(conf.twiter))
                                {
                                    <li><a href="@conf.twiter" title="twitter"><i class="fa fa-twitter"> </i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(conf.faceBook))
                                {
                                    <li><a href="@conf.faceBook" title="facebook"><i class="fa fa-facebook"> </i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(conf.google))
                                {
                                    <li><a href="@conf.google" title="instagram"><i class="fa fa-google-plus"> </i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(conf.youTube))
                                {
                                    <li><a href="@conf.youTube" title="youtube"><i class="fa fa-youtube"> </i></a></li>
                                }
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright clearfix">
        <div class="container">
            <div class="inner clearfix">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="text-center copy-right-text">
                            @conf.copyRight <span class="nc hidden-xs">|</span> <span class="cungcap">Thiết kế bởi <a style="color: #c2bebe" target="_blank" href="https://thietkewebsitedomain.com/" title="Sapo">thietkewebsitedomain.com</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<section id="hotline-zalo-fb">
    @if (!string.IsNullOrEmpty(conf.hotLine))
    {
        <a href="tel:@conf.hotLine" class="call-icon" rel="nofollow">
            <img src="~/Content/CssSite/images/hotline.png" />
            <span>Hotline</span>
        </a>
    }
    @if (!string.IsNullOrEmpty(conf.zaloChat))
    {
        <a href="@("http://zalo.me/"+conf.zaloChat)" class="zalo">
            <img src="~/Content/CssSite/images/zalo.png" />
            <span>Zalo</span>
        </a>
    }
    @if (!string.IsNullOrEmpty(conf.faceBook))
    {
        <a href="@conf.faceBook" target="_blank" class="mes">
            <img src="~/Content/CssSite/images/fb.png" />
            <span>Facebook</span>
        </a>
    }
    @if (!string.IsNullOrEmpty(conf.youTube))
    {
        <a href="@conf.youTube" target="_blank" class="mes">
            <img src="~/Content/CssSite/images/youTube.png" />
            <span>YouTube</span>
        </a>
    }
    @if (!string.IsNullOrEmpty(conf.shoppe))
    {
        <a href="@conf.shoppe" target="_blank" class="mes">
            <img src="~/Content/CssSite/images/shoppe.png" />
            <span>Shoppe</span>
        </a>
    }
    @if (!string.IsNullOrEmpty(conf.tiki))
    {
        <a href="@conf.tiki" target="_blank" class="mes">
            <img src="~/Content/CssSite/images/tiki.png" />
            <span>Tiki</span>
        </a>
    }
</section>


<div class="phone-gif">
    <div class="fancybox" onclick="window.location='tel: @conf.hotLine'">
        <div class="coccoc-alo-phone coccoc-alo-green coccoc-alo-show" id="coccoc-alo-phoneIcon" style="right: 5%; top: 10%;">
            <div class="coccoc-alo-ph-circle">&nbsp;</div>
            <!--<div class="coccoc-alo-ph-circle-fill">&nbsp;</div>-->
            <div class="coccoc-alo-ph-img-circle">
                <img src="https://hangduchaanh.com/Content/CssSite/images/hotline.png" />
            </div>
        </div>
    </div>
    <div class="clicktocall"><a class="call" href="tel:@conf.hotLine">Gọi ngay<br><b>@conf.hotLine</b></a></div>
</div>


<button onclick="topFunction()" id="myBtn" title="Go to top">
    <i style="color: darkgreen; font-size: 30px;" class="fa fa-arrow-circle-up" aria-hidden="true"></i>
</button>

