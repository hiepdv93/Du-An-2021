                        <div class="col-md-12 col-xs-12 col-lg-3">
                            <div class="col-item col-item-grid">
                                <a href="javascript:void(0);" target="_self">
                                    <img class="lazyautosizes lazyloaded" data-sizes="auto" src="@item.advImage" alt="@item.advName" sizes="370px">
                                </a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

