<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.description">
    <meta name="keywords" content="@ViewBag.keywords">
    <meta http-equiv="content-language" content="vi" />
    <meta name="robots" content="noodp,index,follow" />
    <meta name="revisit-after" content="1 days" />
    <link href="~/Content/CssSite/images/logo_icon.ico" rel="shortcut icon" type="image/x-icon" />

    <meta property="og:title" content="@ViewBag.title">
    <meta property="og:url" itemprop="url" content="@ViewBag.url">
    <meta property="og:image" content="@ViewBag.img">
    <meta property="og:description" content="@ViewBag.description">
    <meta property="og:site_name" content="@ViewBag.description">
    <meta property="og:type" content="website">

    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/font-awesome.min.css">
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">*@
    @*<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>*@

    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/mobile.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/swiper.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/owl.theme.css">
    <link rel="stylesheet" type="text/css" href="~/Content/CssSite/css/owl.transitions.css">
    <link type="text/css" href="~/Content/toastr/toastr.min.css" rel="stylesheet" />

    <!-- Javascript -->
    <script src="~/Content/CssSite/js/jquery.js"></script>
    <script src="~/Content/CssSite/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/CssSite/js/dialog.js"></script>
    <!-- End Javascript -->
    <!-- Scroll-top-->
    <script type="text/javascript" src="~/Content/CssSite/js/scroll_top.js"></script>
    <script src="~/Content/CssSite/js/owl.carousel.js"></script>
    <script src="~/Content/CssSite/js/owl_full.js"></script>
    <script src="~/Content/CssSite/js/swiper.query.min.js"></script>


    <style>
        .pagination span {
            background-color: #0072bc !important;
            color: #fff !important;
        }

        .pagination > li > a, .pagination > li > span {
            position: relative;
            float: left;
            padding: 6px 12px;
            margin-left: -1px;
            line-height: 1.42857143;
            color: #337ab7;
            text-decoration: none;
            background-color: #fff;
            border: 1px solid #ddd;
        }
    </style>

</head>
<body>
    <div id="loader_id"></div>
    <div id="overlay" onclick="off()"></div>
    @{string langSite = ClassExten.GetLangSite();
        string path = HttpContext.Current.Request.Url.AbsolutePath;}

    @Html.Action("ChildHeader", "ChildView", new { path = path })
    <section class="content_main">
        @Html.Action("ChildHeaderBottom", "ChildView", new { path = path })
        @RenderBody()
    </section>
    @Html.Action("ChildFooter", "ChildView")

    <!-- Scroll fixed top change navabar-->
    <script src="~/Content/CssSite/js/classie.js" type="text/javascript"></script>
    <script src="~/Content/CssSite/js/cbpAnimatedHeader.js" type="text/javascript"></script>

    <script src="~/Content/toastr/toastr.js"></script>
    <script src="~/Content/AdminJSController/script_validate.js"></script>
    <script src="~/Content/SiteJSController/HomeControllers.js"></script>

    <script type="text/javascript" src="~/Content/CssSite/js/smoothproducts.min.js"></script>


    <script>
        new WOW().init();
    </script>
    @if (path.Equals("/") || path.Equals(""))
    {
        <script>
            var swiper = new Swiper('.swiper-container', {
                pagination: '.swiper-pagination',
                paginationClickable: true,
                nextButton: '.swiper-button-next',
                prevButton: '.swiper-button-prev',
                autoplay: 7500,
                slidesPerView: 1,
                spaceBetween: 20
            });
        </script>
    }
    <script>
        $(function () {
            //Scroll addClass to top
            var header = $(".link_buy_fixed");
            $(window).scroll(function () {
                var scroll = $(window).scrollTop();

                if (scroll >= 500) {
                    header.addClass('link_buy_fixed_shirk');
                }
                else {
                    header.removeClass("link_buy_fixed_shirk");
                }
            });
        });
    </script>

    @if (path.Contains("/san-pham/"))
    {
        //Chi tiet sp
        <script type="text/javascript">
            $(window).load(function () {
                $('.sp-wrap').smoothproducts();
            });
        </script>
        <!-- End Zoom Products -->
    }
</body>
</html>
