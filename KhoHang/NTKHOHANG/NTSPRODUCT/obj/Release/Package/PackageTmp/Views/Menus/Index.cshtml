@model IList<NTSPRODUCT.Models.Menu>
@{
    ViewBag.controller = "Danh sách menu";
    ViewBag.Title = "Administrator - Danh sách menu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- SELECT2 EXAMPLE -->
<div class="box ">
    <div class="box-header with-border">
        <h3 class="box-title">Thông tin tìm kiếm</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-2">
                <select name="slposition" id="positionSearch" class="form-control">
                    <option value="-1">Tất cả vị trí</option>
                    <option value="1">Menu trên</option>
                    <option value="2">Menu dưới</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="sltype" id="typeSearch" class="form-control">
                    <option value="-1">Tất cả loại menu</option>
                    <option value="1">Menu link</option>
                    <option value="3">Menu liên kết</option>
                    <option value="2">Menu nội dung</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" id="nameSearch" class="form-control" placeholder="Tên menu.." />
            </div>
            <div class="col-md-5 text-right">
                <button type="button" class="btn  btn-success margin-r-5" onclick="SearchMenu()"><i class="fa fa-fw fa-search"></i> Tìm kiếm</button>
                <button class="btn btn-default" type="button" onclick="RefreshNews()"><i class="fa fa-fw fa-refresh"></i> Làm mới</button>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<div class="row">
    <div class="col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Danh sách menu</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>
                                Tổng số <b class="badge badge-primary" id="count_data">0</b> bản ghi
                            </h4>
                        </div><div class="col-sm-6 text-right">
                            <a class="btn btn-info" href="/Menus/Add"><i class="fa fa-fw fa-plus"></i>Thêm mới</a>
                        </div>
                    </div>
                    <div class="row" id="row_data">

                    </div>

                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
<!-- /.row -->
@if (Session["ok"] != null)
{
    <script type="text/javascript">
        toastr.success('@Session["ok"].ToString()');
    </script>
}
@if (Session["ok"] != null) { Session["ok"] = null; }

<script src="~/Content/AdminJSController/MenusListControllers.js"></script>
