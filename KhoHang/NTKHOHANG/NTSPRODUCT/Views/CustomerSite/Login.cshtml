@model NTSPRODUCT.Models.Config
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb_background">
    <span class="overlay"></span>
    <div class="title_full">
        <div class="container a-center">
            <h1 class="title_page">@ClassExten.GetLangKey("key_lienhe")</h1>
        </div>
    </div>
</div>
<section class="bread-crumb">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="rows">
            <div class="col-xs-12 a-left">
                <ul class="breadcrumb" itemscope="">
                    <li class="home">
                        <a itemprop="url" href="/" title="@ClassExten.GetLangKey("home")"><span itemprop="title">@ClassExten.GetLangKey("home")</span></a>
                        <span class="mr_lr">&nbsp;<i class="fa fa-caret-right"></i>&nbsp;</span>
                    </li>
                    <li><strong><span itemprop="title">@ClassExten.GetLangKey("key_lienhe")</span></strong></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="page-detail">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xs-12 col-lg-63">
                <div class="form-contact">
                    <div class="card-body p-3">
              
                        <div class="form-group col-lg-12 col-sm-12">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-texts"><i class="fa fa-envelope"></i></div>
                                </div>
                                <input type="email" class="form-control" id="lEmail" name="lEmail" placeholder="Email (*)">
                            </div>
                        </div>



                        <div class="form-group col-lg-6 col-sm-6">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-texts"><i class="fa fa-pencil"></i></div>
                                </div>
                                <input type="password" class="form-control" id="lPass" name="lPass" placeholder="Mật khẩu (*)">
                            </div>
                        </div>


                        <div class="form-group col-lg-6 col-sm-6">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-texts"><i class="fa fa-pencil"></i></div>
                                </div>
                                <input type="text" class="form-control" id="lCodeLogin" name="lCodeLogin" placeholder="Mã bảo mật (*)">
                            </div>
                        </div>

                        <div class="col-lg-6 col-sm-6" id="keyLogin">
                        </div>
                        <div class="text-right col-lg-6 col-sm-6">
                            <div class="btn">
                                <button onclick="SendLogin()" type="button" class="submit">Đăng nhập <i class="fa fa-send"></i></button>
                            </div>
                            <p style="padding-right:13px">
                                <a href="/dang-ky" title="Đăng ký tài khoản">Bạn chưa có tài khoản?</a>

                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xs-12 col-lg-6">
                <div class="title-contact">
                    @Html.Raw(Model.conTact)
                </div>
            </div>
        </div>

    </div>
</section>
<script>
    $.post("/CustomerSite/RenderKeyLogin", function (result) {
        $("#keyLogin").html(result);
    });
</script>