<div id="modamCustomer" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog w700">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #5db2ff; color: white">
                <button type="button" id="close_producet" class="close" data-dismiss="modal">&times;</button>
                <h4 class="titleCustomer"></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Họ tên</label><span class="text-red"></span>
                                <input type="hidden" value="" id="idUpdate" />
                                <input type="text" class="form-control" name="fullName" id="fullName" maxlength="250" placeholder="Họ tên.." required>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Email</label><span class="text-red"></span>
                                <input type="text" class="form-control" name="cemail" id="cemail" maxlength="250" placeholder="Email.." required>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="display-block">Trạng tài khoản</label>
                            <label class="switch">
                                <input type="checkbox" name="activeAcount"  id="activeAcount">
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="display-block">Trạng thái mã</label>
                            <label class="switch">
                                <input type="checkbox" name="activeCode"  id="activeCode">
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="modal-footer" style="margin-top: -20px;">
                    <button type="submit" class="btn btn-primary" onclick="CreateOrUpdate()"><i class="glyphicon glyphicon-floppy-save"></i> Lưu lại</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Thoát</button>
                </div>
            </div>
        </div>
    </div>
</div>

