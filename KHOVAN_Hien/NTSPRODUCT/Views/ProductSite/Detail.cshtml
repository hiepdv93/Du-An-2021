@model IList<NTSPRODUCT.Models.Product>
@{
    var pro = (NTSPRODUCT.Models.Product)ViewBag.pro;
    var cateP = (NTSPRODUCT.Models.Category)ViewBag.cateP;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string type = ViewBag.type;
}
<section class="bread-crumb">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="breadcrumb-container">
                    <ul class="breadcrumb">
                        <li class="home">
                            <a itemprop="url" href="/" title="@ClassExten.GetLangKey("home")"><span itemprop="title">@ClassExten.GetLangKey("home")</span></a>
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                        </li>
                        <li>
                            <a itemprop="url" href="/@(cateP.cateType.Equals(ClassExten.typePro)?"moduler":"danh-muc")/@cateP.cateKey" title="@cateP.cateName"><span itemprop="title">@cateP.cateName</span></a>
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                        </li>
                        @if (pro != null)
                        {
                            <li><strong><span itemprop="title">@pro.pro_name</span></strong></li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="page-detail">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="detail-product">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-lg-5 col-md-5">
                            <div class="relative product-image-block ">
                                <div class="item">
                                    <div class="clearfix">
                                        <ul id="image-gallery" class="gallery list-unstyled cS-hidden">

                                            <li data-thumb="@pro.proAvata">
                                                <img src="@pro.proAvata" />
                                            </li>
                                            @if (!string.IsNullOrEmpty(pro.proImages1))
                                            {
                                                <li data-thumb="@pro.proImages1">
                                                    <img src="@pro.proImages1" />
                                                </li>
                                            }
                                            @if (!string.IsNullOrEmpty(pro.proImages2))
                                            {
                                                <li data-thumb="@pro.proImages2">
                                                    <img src="@pro.proImages2" />
                                                </li>
                                            }
                                            @if (!string.IsNullOrEmpty(pro.proImages3))
                                            {
                                                <li data-thumb="@pro.proImages3">
                                                    <img src="@pro.proImages3" />
                                                </li>
                                            }
                                            @if (!string.IsNullOrEmpty(pro.proImages4))
                                            {
                                                <li data-thumb="@pro.proImages4">
                                                    <img src="@pro.proImages4" />
                                                </li>
                                            }
                                            @if (!string.IsNullOrEmpty(pro.proImages5))
                                            {
                                                <li data-thumb="@pro.proImages5">
                                                    <img src="@pro.proImages5" />
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 details-pro">
                            <h1 class="title-head" itemprop="name">@pro.pro_name</h1>
                            <div class="details-sticky details-pro">
                                <div itemprop="offers" itemscope="" itemtype="">
                                    <div class="information">
                                        <p><span>@ClassExten.GetLangKey("key_thuonghieu"):</span>@pro.brank</p>
                                    </div>
                                    <div class="price-box clearfix">
                                        <div class="special-price">
                                            <span class="price product-price">
                                                @(pro.proPrice_sale != 0 ? pro.proPrice_sale.Value.ToString("N0") : ClassExten.GetLangKey("contact"))
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-product">
                                    <div class="form-group form-groupx">
                                        <button type="button" class="btn btn-lg btn-gray btn-cart btn_buy add_to_cart" data-toggle="modal" data-target="#exampleModal">
                                            <span>@ClassExten.GetLangKey("contact")</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="product-summary">
                                <div class="rte margin-bottom-0">
                                    @Html.Raw(pro.introContent)
                                </div>
                            </div>
                            <div class="social-sharing">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                            <div class="info-product">
                                <ul class="tabs-product">
                                    <li class="tab-link current" data-tab="tab-1">@ClassExten.GetLangKey("key_spthongtinn")</li>
                                    <li class="tab-link" data-tab="tab-2">@ClassExten.GetLangKey("key_spmota")</li>
                                </ul>
                                <div id="tab-1" class="info-product-tab-content current">
                                    @Html.Raw(pro.proContentTab1)
                                </div>
                                <div id="tab-2" class="info-product-tab-content">
                                    @Html.Raw(pro.proContentTab2)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                            <div class="product-relate">
                                <div class="titel-home">
                                    <h2 class="uppercase text-center">@ClassExten.GetLangKey("key_spcungchuyenmuc")</h2>
                                </div>
                                <div id="owl-product-relate-detail" class="owl-carousel owl-theme">
                                    @foreach (var item in Model)
                                    {
                                        <div class="item">
                                            <div class="product-box on-sale-box ">
                                                <div class="product-thumbnail">
                                                    <a href="/@(item.pType.Equals(Constants.Product)?"san-pham":"thiet-bi")/@item.pro_key" title="@item.pro_name" class="image_thumb">
                                                        <img class="img-responsive" src="@item.proAvata.Replace("uploads", "uploads/_thumbs")" alt="@item.pro_name">
                                                    </a>
                                                    <div class="product-action clearfix hidden-md hidden-sm hidden-xs">
                                                        <a href="/@(item.pType.Equals(Constants.Product)?"san-pham":"thiet-bi")/@item.pro_key" title="@item.pro_name" class="btn-buy btn-cart btn btn-gray">
                                                            <span><i class="fa fa-cart-plus" aria-hidden="true"></i></span>
                                                        </a>
                                                    </div>
                                                    <a href="/@(item.pType.Equals(Constants.Product)?"san-pham":"thiet-bi")/@item.pro_key" title="@item.pro_name" class="btn-white btn_view btn right-to quick-view">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                </div>
                                                <div class="product-info a-left">
                                                    <h3 class="product-name"><a href="/@(item.pType.Equals(Constants.Product)?"san-pham":"thiet-bi")/@item.pro_key" title="@item.pro_name">@item.pro_name</a></h3>
                                                    <div class="price-box clearfix">
                                                        <div class="old-price">
                                                            <span class="price product-price-old">
                                                                @ClassExten.GetLangKey("key_gia"):
                                                            </span>
                                                        </div>
                                                        <div class="special-price">
                                                            <span class="price product-price">@(item.proPrice_sale != 0 ? item.proPrice_sale.Value.ToString("N0") : ClassExten.GetLangKey("key_lienhe"))</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@ClassExten.GetLangKey("key_tskt")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-12 col-xs-12 col-lg-12">
                    <div class="form-contact">
                        <form action="" method="post" class="img-responsive">
                            <div class="card-body p-3">
                                <!--Body-->
                                <div class="form-group col-lg-6 col-sm-6">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-texts"><i class="fa fa-user"></i></div>
                                        </div>
                                        <input type="hidden" id="referencesId" value="@pro.id">
                                        <input type="text" class="form-control" id="ctName" name="nombre" placeholder="@ClassExten.GetLangKey("key_hoten") (*)">
                                    </div>
                                </div>
                                <div class="form-group col-lg-6 col-sm-6">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-texts"><i class="fa fa-envelope"></i></div>
                                        </div>
                                        <input type="email" class="form-control" id="ctEmail" name="email" placeholder="Email...">
                                    </div>
                                </div>
                                <div class="form-group col-lg-6 col-sm-6">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-texts"><i class="fa fa-phone"></i></div>
                                        </div>
                                        <input type="text" class="form-control" id="ctPhone" name="nombre" placeholder="@ClassExten.GetLangKey("key_sdt") (*)">
                                    </div>
                                </div>
                                <div class="form-group col-lg-6 col-sm-6">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-texts"><i class="fa fa-home"></i></div>
                                        </div>
                                        <input type="text" class="form-control" id="ctAddress" name="nombre" placeholder="@ClassExten.GetLangKey("key_diachi") ..">
                                    </div>
                                </div>
                                <div class="form-group col-lg-12 col-sm-12">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-texts"><i class="fa fa-pencil"></i></div>
                                        </div>
                                        <textarea class="form-control" id="ctNote" rows="6" placeholder="@ClassExten.GetLangKey("key_ndmota") (*)"></textarea>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@ClassExten.GetLangKey("key_huy")</button>
                <button type="button" onclick="SendContact()" class="btn btn-primary">@ClassExten.GetLangKey("key_dathang")</button>
            </div>
        </div>
    </div>
</div>