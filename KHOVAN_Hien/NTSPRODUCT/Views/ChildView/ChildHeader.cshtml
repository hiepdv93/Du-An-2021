@model IList<NTSPRODUCT.Models.Menu>
@{
    bool isHome = ViewBag.isHome;
    var conf = (NTSPRODUCT.Models.Config)ViewBag.conf;
    var slide = (List<NTSPRODUCT.Models.Slide>)ViewBag.slide;
    var cateParent = Model.Where(u => u.par_id.Equals(ClassExten.cateParent)).OrderBy(u => u.mOrder).ToList();
}
@if (isHome)
{
    <header class="header">
        <div class="container">
            <div class="header-main">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-full-function">
                        <a id="toggle" href="#"><i class="fa fa-bars"></i></a>
                        <div id="overlay"></div>
                        <div class="logo">
                            <a href="@conf.linkLogo" class="logo-wrapper" title="@conf.shopName">
                                <img src="@conf.logoTop" alt="@conf.shopName">
                            </a>
                        </div>
                        <a href="tel:@conf.hotLine" title="@conf.hotLine" class="icon-option-cart hidden-lg hidden-md"></a>
                    </div>
                    <div class="col-lg-5 col-md-4">
                        <div class="search">
                            <div class="header_search search_form">
                                <input type="search" name="query" id="homeSearch1" placeholder="@ClassExten.GetLangKey("key_timkiem")" class="input-group-field st-default-search-input search-text" autocomplete="off">
                                <span class="input-group-btn">
                                    <button class="btn icon-fallback-text" id="btnHomeSearch1">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-5 hidden-sm hidden-xs">
                        <div class="top-fun">
                            <div class="hotline">
                                <img src="~/Content/CssSite/images/hotline.svg" alt="@ClassExten.GetLangKey("key_dienthoai247")">
                                <div class="hotline-text">
                                    <a href="tel:@conf.hotLine">@conf.hotLine</a>
                                    <span>@ClassExten.GetLangKey("key_dienthoai247")</span>
                                </div>
                            </div>
                            <div class="translate">
                                <ul>
                                    <li class="active">
                                        <span class="span-lang" id="btnLangVN">
                                            <img src="~/Content/CssSite/images/flag_vi.gif" class="img-fluid" alt="lang">
                                        </span>
                                    </li>
                                    <li>
                                        <span class="span-lang" id="btnLangEN">
                                            <img src="~/Content/CssSite/images/flag_en.gif" class="img-fluid" alt="lang">
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="nav-top">
            <div class="container">
                <nav id="menu">
                    <ul>
                        @foreach (var item in cateParent)
                        {
                            <li class="@(item.link.Equals("/") ? "active" : "")">
                                <a @(string.IsNullOrEmpty(item.link) ? "" : "href=" + item.link + "") title="@item.name">@item.name</a>
                                @Html.Raw(ClassExten.GetMenuSiteLevel2(item.id, Model.Where(u => !u.par_id.Equals(ClassExten.cateParent)).ToList()))
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <section id="jssor_1" style="position:relative;margin:0 auto;top:0px;left:0px;width:1300px;height:500px;overflow:hidden;visibility:hidden;">
        <!-- Loading Screen -->
        <div data-u="loading" class="jssorl-009-spin" style="position:absolute;top:0px;left:0px;width:100%;height:100%;text-align:center;background-color:rgba(0,0,0,0.7);">
            <img alt="" style="margin-top:-19px;position:relative;top:50%;width:38px;height:38px;" src="~/Content/CssSite/images/spin.svg" />
        </div>
        <div data-u="slides" style="cursor:default;position:relative;top:0px;left:0px;width:1300px;height:500px;overflow:hidden;">
            @foreach (var item in slide)
            {
                <div>
                    <img alt="@item.name" data-u="image" src="@item.images" />
                </div>
            }
        </div>
        <!-- Arrow Navigator -->
        <div data-u="arrowleft" class="jssora051" style="width:65px;height:65px;top:0px;left:25px;" data-autocenter="2" data-scale="0.75" data-scale-left="0.75">
            <svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
                <polyline class="a" points="11040,1920 4960,8000 11040,14080 "></polyline>
            </svg>
        </div>
        <div data-u="arrowright" class="jssora051" style="width:65px;height:65px;top:0px;right:25px;" data-autocenter="2" data-scale="0.75" data-scale-right="0.75">
            <svg viewbox="0 0 16000 16000" style="position:absolute;top:0;left:0;width:100%;height:100%;">
                <polyline class="a" points="4960,1920 11040,8000 4960,14080 "></polyline>
            </svg>
        </div>
    </section>
}
else
{
    <header class="header header-page">
        <div class="container">
            <div class="header-main">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-full-function">
                        <a id="toggle" href="#"><i class="fa fa-bars"></i></a>
                        <div id="overlay"></div>
                        <div class="logo">
                            <a href="@conf.linkLogo" class="logo-wrapper" title="@conf.shopName">
                                <img src="@conf.logoBottom" alt="@conf.shopName">
                            </a>
                        </div>
                        <a href="tel:@conf.hotLine" title="@conf.hotLine" class="icon-option-cart hidden-lg hidden-md"></a>
                    </div>
                    <div class="col-lg-5 col-md-4">
                        <div class="search">
                            <div class="header_search search_form">
                                <form class="input-group search-bar search_form has-validation-callback" action="/search" method="get" role="search">
                                    <input type="search" name="query" id="homeSearch1" placeholder="@ClassExten.GetLangKey("key_timkiem")" class="input-group-field st-default-search-input search-text" autocomplete="off">
                                    <span class="input-group-btn">
                                        <button class="btn icon-fallback-text" id="btnHomeSearch1">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-5 hidden-sm hidden-xs">
                        <div class="top-fun">
                            <div class="hotline">
                                <img src="~/Content/CssSite/images/hotline.svg" alt="@ClassExten.GetLangKey("key_dienthoai247")">
                                <div class="hotline-text">
                                    <a href="tel:@conf.hotLine">@conf.hotLine</a>
                                    <span>@ClassExten.GetLangKey("key_dienthoai247")</span>
                                </div>
                            </div>
                            <div class="translate">
                                <ul>
                                    <li class="active">
                                        <span class="span-lang" id="btnLangVN">
                                            <img src="~/Content/CssSite/images/flag_vi.gif" class="img-fluid" alt="lang">
                                        </span>
                                    </li>
                                    <li>
                                        <span class="span-lang" id="btnLangEN">
                                            <img src="~/Content/CssSite/images/flag_en.gif" class="img-fluid" alt="lang">
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="nav-top">
            <div class="container">
                <nav id="menu">
                    <ul>
                        @foreach (var item in cateParent)
                        {
                            <li>
                                <a @(string.IsNullOrEmpty(item.link) ? "" : "href=" + item.link + "") title="@item.name">@item.name</a>
                                @Html.Raw(ClassExten.GetMenuSiteLevel2(item.id, Model.Where(u => !u.par_id.Equals(ClassExten.cateParent)).ToList()))
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
}