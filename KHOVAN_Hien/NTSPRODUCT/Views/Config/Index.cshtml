<script type="text/javascript">

    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {

        createEditor('vi', 'map');
        createEditor('vi', 'liveChat');
        createEditor('vi', 'conTact');
        createEditor('vi', 'googleAnalytics');
        createEditor('vi', 'googleAdsense');

        createEditor('vi', 'footer');
        createEditor('vi', 'homeVideo');
        createEditor('vi', 'infoPage');
        createEditor('vi', 'introStep3');
        createEditor('vi', 'introStep2');
        createEditor('vi', 'introStep1');
        createEditor('vi', 'introStep3R');
        createEditor('vi', 'introStep2R');
        createEditor('vi', 'introStep1R');
    });
</script>
<script type="text/javascript">

    $(function () {
        $("#logoTop").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#logoTop").val(fileUrl);
            };
            finder.popup();
        });
    });
    $(function () {
        $("#logoBottom").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#logoBottom").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>
