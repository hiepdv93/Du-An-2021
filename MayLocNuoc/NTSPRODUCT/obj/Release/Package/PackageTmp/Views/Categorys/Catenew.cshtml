@model IList<NTSPRODUCT.Models.Category>
@{
    ViewBag.Title = "Administrator - Danh sách nhóm tin tức";
    ViewBag.controller = "Quản lý nhóm tin tức";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="box ">
    <div class="box-header with-border">
        <h3 class="box-title">Thông tin tìm kiếm</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-3">
                <input type="text" id="nameSearch" class="form-control" placeholder="Tên nhóm tin tức.." />
            </div>
            <div class="col-md-9 text-right">
                <button type="button" class="btn  btn-success margin-r-5" onclick="SearchCatepro()"><i class="fa fa-fw fa-search"></i> Tìm kiếm</button>
                <button class="btn btn-default" type="button" onclick="RefreshCatepro()"><i class="fa fa-fw fa-refresh"></i> Làm mới</button>
            </div>

        </div>
        <!-- /.row -->
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
<div class="row">
    <div class="col-xs-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">Danh sách nhóm tin tức</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>
                                Tổng số <b class="badge badge-primary" id="count_data">0</b> bản ghi
                            </h4>
                        </div>
                        <div class="col-sm-6 text-right">
                            <button class="btn btn-info classbtAdd" onclick="window.location = '/Categorys/AddCatenews'"><i class="glyphicon glyphicon-plus"></i>Thêm mới</button>
                        </div>
                    </div>
                    <div class="row" id="row_data">

                    </div>

                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
<!-- /.row -->
@if (Session["ok"] != null)
{
    <script type="text/javascript">
        toastr.success('@Session["ok"].ToString()');
    </script>
}
@if (Session["ok"] != null) { Session["ok"] = null; }
<script src="~/Content/AdminJSController/Cate/CatenewsListController.js"></script>
