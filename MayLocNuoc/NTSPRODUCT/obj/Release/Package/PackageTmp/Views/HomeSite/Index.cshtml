<div class="box_prh">
    <div class="box_titleth">
        <ul>
            @for (int i = 0; i < Model.Count; i++)
            {
                <li>
                    <a href="#tab_@i" title="@Model[i].pro_name" h class="@(i==0?"tab_ah":"")">
                        <p>
                            <img src="@Model[i].proAvata"
