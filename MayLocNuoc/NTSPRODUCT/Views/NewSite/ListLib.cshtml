@model IList<NTSPRODUCT.Models.Lib>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main" class="clearfix">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12 col-xs-12">
                <div id="Breadcrum">
                    <div class="module box-breakcrumb">
                        <div class="breadcrumb clearfix">
                            <ul class="clearfix">
                                <li><a class="homepage" title="@ClassExten.GetLangKey("home")" href="/">@ClassExten.GetLangKey("home")</a></li>
                                <li><a title="@ClassExten.GetLangKey("key_thuvien")" class="here" href="#">@ClassExten.GetLangKey("key_thuvien")</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix wcontent">
                <div class="col-12 col-md-12 col-lg-12 col-xs-12">
                    <div id="centerPanel">
                        <div class="news-detail editor_css">
                            <div class="clearfix" style="overflow: hidden">
                                <h2>@ClassExten.GetLangKey("key_Downloadtailieu")</h2>
                                <div class="product-tai-lieu">
                                    <div class="table1">
                                        <table style="width:100%" cellspacing="0" cellpadding="0">
                                            <tbody>
                                                <tr class="title-bg">
                                                    <td width="16%">@ClassExten.GetLangKey("key_Anhsp")</td>
                                                    <td width="24%">@ClassExten.GetLangKey("key_Tensp")</td>
                                                    <td width="23%">@ClassExten.GetLangKey("key_thongsokt")</td>
                                                    <td width="18%">@ClassExten.GetLangKey("key_danhmuc")</td>
                                                    <td width="19%">Download</td>
                                                </tr>
                                                @for (int i = 0; i < Model.Count; i++)
                                                {
                                                    <tr class="@(i%2!=0?"bg":"")">
                                                        <td><img width="97" alt="@Model[i].linName" src="@Model[i].libImage.Replace("/uploads","/uploads/_thumbs")" class="sanpham"></td>
                                                        <td class="text-left">@Model[i].linName</td>
                                                        <td class="text-left">
                                                            @Model[i].libNote
                                                        </td>
                                                        <td class="text-left">
                                                            @Html.Raw(ClassExten.GetCateLib(Model[i].libType.Value,Model[i].cateId))
                                                        </td>
                                                        <td><a target="_blank" href="@Model[i].libLink" class="button"><span>Download </span></a></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

