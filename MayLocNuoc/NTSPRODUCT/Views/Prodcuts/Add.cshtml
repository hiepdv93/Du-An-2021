                                    <input type="text" class="form-control " placeholder="File đính kèm" value="" maxlength="400" id="proFile" name="proFile" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Giá gốc</label><span class="text-red">(*)</span>
                                    <input type="number" value="0" class="form-control " name="price" required="required" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Giá KM</label><span class="text-red">(*)</span>
                                    <input type="number" value="0" class="form-control " name="priceSale" required="required" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Thương hiệu</label>
                                    <select name="brandId" id="brandId" required class="form-control">
                                        @Html.Action("GetBrank", "ImportView")
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Thứ tự</label><span class="text-red">(*)</span>
                                    <input type="number" value="1" class="form-control " name="proOrder" required="required" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="display-block">Hiển thị</label>
                                    <label class="switch">
                                        <input type="checkbox" name="proStatus" checked>
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>
                         
                        </div>
                        <div class="form-group">
                            <label>Giới thiệu ngắn</label>
                            @Html.TextArea("prodescription")
                        </div>
                        <div class="form-group">
                            <label>Chi tiết</label>
                            @Html.TextArea("proContentTab1")
                        </div>
                        <div class="form-group">
                            <label> Thông số kỹ thuật</label>
                            @Html.TextArea("proContentTab2")
                        </div>
                        <div class="form-group">
                            <label> Công nghệ</label>
                            @Html.TextArea("proContentTab3")
                        </div>
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane" id="tab_2">
