@using (Html.BeginForm())
{
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">

            <!-- general form elements -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_1" data-toggle="tab">Thông tin chung</a></li>
                    <li><a href="#tab_2" data-toggle="tab">Hình ảnh</a></li>
                    <li><a href="#tab_3" data-toggle="tab" style="display:none">Thẻ Tag</a></li>
                    <li><a href="#tab_4" data-toggle="tab">Cấu hình seo</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Tên sản phẩm</label><span class="text-red">(*)</span>
                                    <input type="text" class="form-control " maxlength="800" name="proName" id="proName" placeholder="Tên sản phẩm" required="required" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mã sản phẩm</label>
                                    <input type="text" class="form-control " maxlength="200" name="proCode" id="proCode" placeholder="Mã sản phẩm" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Danh mục</label>
                                    <select name="cateId" id="cateId" required class="form-control">
                                        @Html.Action("GetCateForProduct", "ImportView", new { type = ClassExten.typePro })
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Url</label>
                                    <input type="text" class="form-control " placeholder="Url sản phẩm" maxlength="800" id="pro_key" name="pro_key" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
